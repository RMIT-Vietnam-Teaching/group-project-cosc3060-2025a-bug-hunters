<!-- Student Success Stories / Testimonials Section -->
<section class="testimonials-section">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title">What Our Students Say</h2>
            <p class="section-subtitle">
                Real success stories from learners just like you
            </p>
        </div>

        <div class="row">
            <div class="col-12">
                <!-- Testimonial Carousel -->
                <div
                    id="testimonialCarousel"
                    class="carousel slide"
                    data-bs-ride="carousel"
                >
                    <div class="carousel-inner">
                        <!-- Testimonial 1 -->
                        <div class="carousel-item active">
                            <div class="testimonial-card">
                                <div class="row align-items-center">
                                    <div class="col-md-4 text-center">
                                        <img
                                            src="images/defaultAvatar.png"
                                            class="testimonial-img rounded-circle mb-3"
                                            alt="Sarah Johnson"
                                        />
                                        <h5 class="testimonial-name">
                                            Sarah Johnson
                                        </h5>
                                        <p class="testimonial-title">
                                            Web Developer
                                        </p>
                                        <div class="testimonial-rating">
                                            <i class="bi bi-star-fill"></i>
                                            <i class="bi bi-star-fill"></i>
                                            <i class="bi bi-star-fill"></i>
                                            <i class="bi bi-star-fill"></i>
                                            <i class="bi bi-star-fill"></i>
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="testimonial-content">
                                            <i
                                                class="bi bi-quote quote-icon"
                                            ></i>
                                            <p class="testimonial-text">
                                                "I started as a complete
                                                beginner with zero coding
                                                experience. After completing the
                                                Web Development Bootcamp, I
                                                landed my dream job at a tech
                                                startup! The instructors were
                                                incredibly supportive and the
                                                hands-on projects gave me
                                                real-world experience."
                                            </p>
                                            <p class="testimonial-course">
                                                <strong
                                                    >Course completed:</strong
                                                >
                                                Web Development Bootcamp
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Testimonial 2 -->
                        <div class="carousel-item">
                            <div class="testimonial-card">
                                <div class="row align-items-center">
                                    <div class="col-md-4 text-center">
                                        <img
                                            src="images/defaultAvatar.png"
                                            class="testimonial-img rounded-circle mb-3"
                                            alt="Michael Chen"
                                        />
                                        <h5 class="testimonial-name">
                                            Michael Chen
                                        </h5>
                                        <p class="testimonial-title">
                                            Data Analyst
                                        </p>
                                        <div class="testimonial-rating">
                                            <i class="bi bi-star-fill"></i>
                                            <i class="bi bi-star-fill"></i>
                                            <i class="bi bi-star-fill"></i>
                                            <i class="bi bi-star-fill"></i>
                                            <i class="bi bi-star-half"></i>
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="testimonial-content">
                                            <i
                                                class="bi bi-quote quote-icon"
                                            ></i>
                                            <p class="testimonial-text">
                                                "The Data Science course
