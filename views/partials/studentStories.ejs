                        <!-- Testimonial 3 -->
                        <div class="carousel-item">
                            <div class="testimonial-card">
                                <div class="row align-items-center">
                                    <div class="col-md-4 text-center">
                                        <img
                                            src="images/defaultAvatar.png"
