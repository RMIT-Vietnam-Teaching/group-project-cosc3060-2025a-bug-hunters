<div class="container my-5">
    <div class="card card-custom mx-auto" style="max-width: 800px;">
      <h3 class="mb-4">
        <i class="bi bi-book me-2"></i><%= course.name %>
      </h3>
      
      <div class="mb-3">
        <span class="icon-label"><i class="bi bi-person-circle me-2"></i>Instructor:</span>
        <span class="icon-value"><%= course.author %></span>
      </div>

      <div class="mb-3">
        <span class="icon-label"><i class="bi bi-card-text me-2"></i>Description:</span>
        <p class="icon-value mt-1"><%= course.description %></p>
      </div>

      <div class="row mb-3">
        <div class="col-md-6">
          <span class="icon-label"><i class="bi bi-currency-dollar me-1"></i>Price:</span>
          <div class="icon-value">$<%= course.price %></div>
        </div>
        <div class="col-md-6">
          <span class="icon-label"><i class="bi bi-clock me-1"></i>Duration:</span>
          <div class="icon-value"><%= course.duration %></div>
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-md-6">
          <span class="icon-label"><i class="bi bi-calendar-event me-1"></i>Start Date:</span>
          <div class="icon-value"><%= course.startDate?.toDateString() %></div>
        </div>
        <div class="col-md-6">
          <span class="icon-label"><i class="bi bi-calendar-check me-1"></i>End Date:</span>
          <div class="icon-value"><%= course.endDate?.toDateString() %></div>
        </div>
      </div>

      <div class="row mb-4">
        <div class="col-md-6">
          <span class="icon-label"><i class="bi bi-star me-1"></i>Rating:</span>
          <div class="icon-value">‚≠ê <%= course.rating %></div>
        </div>
        <div class="col-md-6">
          <span class="icon-label"><i class="bi bi-people me-1"></i>Students Enrolled:</span>
          <div class="icon-value"><%= course.studentsEnrolled %></div>
        </div>
      </div>

      <div class="text-end">
        <a href="/institution/manageCourses" class="btn btn-outline-secondary rounded-pill px-4">
          <i class="bi bi-arrow-left me-1"></i>Back to Courses
        </a>
      </div>
    </div>
  </div>