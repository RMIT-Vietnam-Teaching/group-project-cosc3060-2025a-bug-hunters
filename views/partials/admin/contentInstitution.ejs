<main class="col-md-10 admin-main">
    <!-- Header: Title and Actions -->
    <div
        class="admin-header d-flex justify-content-between align-items-center mb-4"
    >
        <h2 class="fw-bold m-0">Institution</h2>
        <div class="d-flex align-items-center gap-2">
            <input
                type="text"
                placeholder="Search..."
                class="admin-search-input"
            />
            <button class="admin-add-button">
                Add <i class="bi bi-plus-circle ms-1"></i>
            </button>
        </div>
    </div>

    <!-- Table -->
    <div class="table-responsive">
        <table
            class="table table-striped table-hover text-center align-middle admin-table"
        >
            <thead class="table-light">
                <tr>
                    <th class="sortable" data-sort="email">Email</th>
                    <th class="sortable" data-sort="password">Password</th>
                    <th class="sortable" data-sort="name">Name</th>
                    <th class="sortable" data-sort="class">Class</th>
                    <th class="sortable" data-sort="instructor">Instructor</th>
                    <th class="sortable" data-sort="student">Student</th>
                </tr>
            </thead>

            <tbody>
                 <% institutions.forEach(inst => { %>
                <tr style="cursor: pointer">
                    <td><%= inst.email %></td>
                    <td><%= inst.password %></td>
                    <td><%= inst.name %></td>
                    <td><%= inst.class %></td>
                    <td><%= inst.instructor %></td>
                    <td><%= inst.student %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <nav class="mt-3">
        <ul class="pagination justify-content-center">
            <li class="page-item active">
                <a class="page-link" href="#">1</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">2</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">3</a>
            </li>
        </ul>
    </nav>
</main>
