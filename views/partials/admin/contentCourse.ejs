<main class="col-md-10 admin-main">
    <!-- Header: Title and Actions -->
    <div
        class="admin-header d-flex justify-content-between align-items-center mb-4"
    >
        <h2 class="fw-bold m-0">Courses</h2>
        <div class="d-flex align-items-center gap-2">
            <input
                type="text"
                placeholder="Search..."
                class="admin-search-input"
            />
            <button class="admin-add-button">
                Add <i class="bi bi-plus-circle ms-1"></i>
            </button>
        </div>
    </div>

    <!-- Table -->
    <div class="table-responsive">
        <table
            class="table table-striped table-hover text-center align-middle admin-table"
        >
            <thead class="table-light">
                <tr>
                    <th class="sortable" data-sort="name">Name</th>
                    <th class="sortable" data-sort="author">Author</th>
                    <th class="sortable" data-sort="students">
                        Student Enrolled
                    </th>
                    <th class="sortable" data-sort="price">Price</th>
                    <th>Date Created</th>
                </tr>
            </thead>

            <tbody>
                <% courses.forEach(course => { %>
                <tr style="cursor: pointer">
                    <td><%= course.name %></td>
                    <td><%= course.author %></td>
                    <td><%= course.students %></td>
                    <td>$<%= course.price %></td>
                    <td><%= course.date %></td>
                </tr>
                <% }) %>
                <!-- Close the loop properly -->
            </tbody>
        </table>
    </div>
</main>
