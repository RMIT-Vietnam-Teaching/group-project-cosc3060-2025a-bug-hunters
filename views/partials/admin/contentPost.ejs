<main class="col-md-10 admin-main px-5">
    <!-- Header -->
    <div
        class="admin-header d-flex justify-content-between align-items-center mb-4"
    >
        <h2 class="fw-bold m-0">Posts</h2>
    </div>

    <!-- Posts -->
    <div class="row justify-content-center">
        <% posts.forEach(post => { %>
        <div class="col-md-6 mb-5">
            <div
                class="position-relative border rounded shadow-sm p-4 bg-white"
            >
                <!-- Post Header -->
                <div
                    class="d-flex justify-content-between align-items-start mb-3"
                >
                    <div class="d-flex align-items-center">
                        <div
                            class="rounded-circle me-3"
                            style="
                                width: 50px;
                                height: 50px;
                                border: 1px solid black;
                            "
                        ></div>
                        <div>
                            <strong class="d-block"><%= post.author %></strong>
                            <small class="text-muted"><%= post.time %></small>
                        </div>
                    </div>
                    <div class="d-flex flex-column gap-2">
                        <button
                            class="btn btn-danger btn-sm px-3 fw-semibold rounded-pill"
                        >
                            Archive
                        </button>
                        <button
                            class="btn btn-secondary btn-sm px-3 fw-semibold rounded-pill"
                        >
                            Delete
                        </button>
                    </div>
                </div>

                <!-- Post Content -->
                <div
                    class="mb-3 border rounded p-3 text-muted fw-semibold text-center"
                >
                    <%= post.content %>
                </div>

                <!-- Post Media -->
                <% if (post.media) { %>
                <div class="mb-3 text-center">
                    <img
                        src="<%= post.media %>"
                        alt="Post Media"
                        class="img-fluid rounded"
                    />
                </div>
                <% } else { %>
                <div
                    class="mb-3 border rounded p-3 text-muted fw-semibold text-center"
                >
                    Post picture(s) and/or videos (optional)
                </div>
                <% } %>

                <!-- Likes and Comments Count -->
                <div
                    class="d-flex justify-content-between align-items-center mb-3"
                >
                    <div class="text-muted">
                        <i class="bi bi-heart me-1"></i><%=
                        post.likes.toLocaleString() %>
                    </div>
                    <div class="text-muted">
                        <i class="bi bi-chat-dots me-1"></i><%=
                        post.commentsCount.toLocaleString() %>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="d-flex justify-content-between mb-3">
                    <button
                        class="btn btn-outline-dark btn-sm rounded-pill w-25 fw-semibold"
                    >
                        Like
                    </button>
                    <button
                        class="btn btn-outline-dark btn-sm rounded-pill w-25 fw-semibold"
                    >
                        Comment
                    </button>
                    <button
                        class="btn btn-outline-dark btn-sm rounded-pill w-25 fw-semibold"
                    >
                        Share
                    </button>
                </div>

                <!-- Add Comment -->
                <div class="d-flex align-items-center mb-3">
                    <div
                        class="rounded-circle me-2"
                        style="
                            width: 40px;
                            height: 40px;
                            border: 1px solid black;
                        "
                    ></div>
                    <div class="flex-grow-1 position-relative">
                        <input
                            type="text"
                            class="form-control rounded-pill shadow-sm ps-3 pe-5"
                            placeholder="Add a comment..."
                        />
                        <span
                            class="position-absolute end-0 top-50 translate-middle-y me-3"
                            style="cursor: pointer"
                            >ðŸ˜Š</span
                        >
                    </div>
                </div>

                <!-- Comments Section -->
                <% post.comments.forEach(comment => { %>
                <div
                    class="d-flex align-items-center bg-light rounded p-2 mb-2"
                >
                    <div
                        class="rounded-circle me-2"
                        style="
                            width: 40px;
                            height: 40px;
                            border: 1px solid black;
                        "
                    ></div>
                    <div class="flex-grow-1">
                        <strong><%= comment.name %></strong>
                        <div><%= comment.text %></div>
                    </div>
                    <button class="btn btn-link text-danger p-0 ms-2">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
                <% }) %>
            </div>
        </div>
        <% }) %>
    </div>
</main>
