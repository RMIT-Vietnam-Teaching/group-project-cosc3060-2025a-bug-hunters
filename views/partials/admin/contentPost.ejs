<main
    class="col-md-10 admin-main"
    style="padding-left: 400px; padding-right: 400px; padding-top: 50px"
>
    <!-- Header -->
    <div
        class="admin-header d-flex justify-content-between align-items-center mb-4"
    >
        <h2 class="fw-bold m-0">Posts</h2>
    </div>

    <!-- Posts -->
    <div class="d-flex flex-column gap-5">
        <% posts.forEach(post => { %>
        <div
            class="border rounded shadow-sm bg-white p-5"
            style="padding-left: 40px; padding-right: 40px"
        >
            <!-- Post Header -->
            <div class="d-flex justify-content-between align-items-start mb-3">
                <div class="d-flex align-items-center gap-3">
                    <img
                        src="<%= post.avatar || '/default-avatar.png' %>"
                        alt="User Avatar"
                        class="rounded-circle"
                        style="width: 50px; height: 50px; object-fit: cover"
                    />
                    <div>
                        <strong><%= post.author %></strong><br />
                        <small class="text-muted">
                            <%= post.timeAgo %> <% if (post.privacy ===
                            "public") { %> ‚Ä¢ üåç Public <% } else { %> ‚Ä¢ üîí
                            Private <% } %>
                        </small>
                    </div>
                </div>

                <div class="text-end">
                    <!-- üîµ STATUS BADGE -->
                    <% if (post.status === 'archived') { %>
                    <span class="badge bg-secondary mb-2 px-3 py-1"
                        >Archived</span
                    ><br />
                    <% } else { %>
                    <span class="badge bg-success mb-2 px-3 py-1">Active</span
                    ><br />
                    <% } %>

                    <!-- Dropdown -->
                    <div class="dropdown">
                        <i
                            class="bi bi-three-dots-vertical fs-5"
                            role="button"
                            data-bs-toggle="dropdown"
                        ></i>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <form
                                    action="/admin/posts/achieve/<%= post._id %>"
                                    method="POST"
                                >
                                    <button type="submit" class="dropdown-item">
                                        Archive
                                    </button>
                                </form>
                            </li>
                            <li>
                                <form
                                    action="/admin/posts/delete/<%= post._id %>"
                                    method="POST"
                                >
                                    <button
                                        type="submit"
                                        class="dropdown-item text-danger"
                                    >
                                        Delete
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Post Content -->
            <p style="font-size: 1.2rem" class="mb-3"><%= post.content %></p>

            <!-- Post Media -->
            <% if (post.media) { %>
            <div class="mb-4 text-center">
                <img
                    src="<%= post.media %>"
                    alt="Post Media"
                    class="img-fluid shadow-sm rounded-4"
                    style="
                        width: 100%;
                        object-fit: cover;
                        border-radius: 16px;
                        max-height: 800px;
                    "
                />
            </div>
            <% } %>

            <!-- Reactions -->
            <div
                class="d-flex justify-content-between align-items-center text-muted mb-4"
            >
                <div class="d-flex align-items-center gap-2">
                    <i class="bi bi-heart-fill" style="color: red"></i>
                    <%= post.likes %>
                </div>
                <div class="d-flex align-items-center gap-2">
                    <i class="bi bi-chat-dots-fill text-primary"></i>
                    <%= post.commentsCount %>
                </div>
            </div>

            <!-- Comments (FULL WIDTH FIXED) -->
            <% post.comments.forEach(comment => { %>
            <div class="d-flex align-items-start gap-3 mb-3 w-100">
                <img
                    src="<%= comment.avatar || '/default-avatar.png' %>"
                    alt="Comment Avatar"
                    class="rounded-circle"
                    style="width: 38px; height: 38px; object-fit: cover"
                />
                <div
                    class="bg-light p-3 rounded-4 flex-grow-1 w-100"
                    style="
                        display: flex;
                        justify-content: space-between;
                        align-items: center;
                    "
                >
                    <div>
                        <strong><%= comment.name %></strong>
                        <div class="mt-1 text-muted"><%= comment.text %></div>
                    </div>
                    <form action="#" method="POST">
                        <button
                            class="btn btn-link text-danger p-0 ms-3"
                            type="button"
                        >
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </div>
            </div>
            <% }) %>
        </div>
        <% }) %>
    </div>
</main>
