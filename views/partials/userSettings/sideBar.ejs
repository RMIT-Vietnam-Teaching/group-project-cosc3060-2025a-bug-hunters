<style>
  body.dark nav.col-md-2 {
    background-color: #1f1f1f !important;
    border-right: 1px solid #444 !important;
  }

  body.dark nav.col-md-2 h5 {
    color: #fff !important;
  }

  body.dark nav.col-md-2 .nav-link {
    color: #ccc !important;
  }

  body.dark nav.col-md-2 .nav-link.active {
    color: white !important;
    background-color: #e07b4f !important;
  }

  body.dark nav.col-md-2 img {
    filter: brightness(0.9) contrast(1.2);
  }


  @media (max-width: 767px) {
    .mobile-menu-button {
      display: block !important; 
      position: fixed;
     top: 15px;   /*adjust the position as neeeded */
      left: 15px;
      background: none;
      border: none;
      padding: 10px;
      cursor: pointer;
      z-index: 1000;
    }

    .mobile-menu-button span {
      display: block;
      width: 25px;
      height: 3px;
      background-color: #333;
      margin: 5px 0;
      border-radius: 3px;
    }

    nav.col-md-2 {
      position: fixed;
      top: 0;
      left: -300px;
      width: 250px;
      height: 100%;
      overflow-y: auto;
      z-index: 999; 
      transition: left 0.3s ease-in-out; 
    }

    nav.col-md-2.open {
      left: 0; 
    }

    body {
      padding-left: 0 !important;
    }

    body.open {
      padding-left: 250px !important; 
    }
  }

  @media (min-width: 768px) {
    .mobile-menu-button {
      display: none !important;
    }
  }
</style>

