<style>
  /* Base styles for the sidebar */
  nav.sidebar-nav,
  nav#sidebarDropdown {
    background-color: #fdf8f3; /* Default light background */
    color: #333; /* Default light text color */
    border-right: 1px solid #eee;
    height: 100%;
    overflow-y: auto;
    padding: 20px 0;
    padding-left: 11px;
  }

  /* Dark mode styles - APPLYING TO BOTH SELECTORS */
  body.dark #sidebarDropdown,
body.dark nav.sidebar-nav {
  background-color: #1f1f1f !important;
  color: #ccc !important;
  border-right: 1px solid #444 !important;
}

body.dark #sidebarDropdown h5,
body.dark nav.sidebar-nav h5 {
  color: #fff !important;
}

body.dark #sidebarDropdown .nav-link,
body.dark nav.sidebar-nav .nav-link {
  color: #ccc !important;
}

body.dark #sidebarDropdown .nav-link.active,
body.dark nav.sidebar-nav .nav-link.active {
  color: white !important;
  background-color: #e07b4f !important;
}

body.dark #sidebarDropdown img,
body.dark nav.sidebar-nav img {
  filter: brightness(0.9) contrast(1.2);
}

  /* Mobile sidebar specific styles */
  @media (max-width: 767px) {
    #sidebarDropdown {
      position: fixed;
      top: 56px;
      left: -250px;
      width: 250px;
      height: calc(100% - 56px);
      z-index: 2000;
      transition: left 0.3s ease-in-out;
    }
    #sidebarDropdown.open {
      left: 0;
    }
  }

  /* Hamburger button styles */
  .mobile-menu-button {
    background: none;
    border: none;
    padding: 0;
    margin-right: 10px;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 5px;
    width: 30px;
    height: 30px;
    z-index: 2100; /* Ensure it's above the sidebar */
  }
  .mobile-menu-button span {
    display: block;
    width: 24px;
    height: 3px;
    background-color: white;
    border-radius: 2px;
  }
  @media (min-width: 768px) {
    .mobile-menu-button {
      display: none;
    }
  }
</style>
    <script src="/js/setTheme.js"></script>
    <button class="mobile-menu-button" id="sidebarToggle" aria-label="Toggle sidebar">
      <span></span>
      <span></span>
      <span></span>
    </button>
    <nav id="sidebarDropdown" class="sidebar-nav">
    
      <div class="d-flex align-items-center mb-4 ps-3">
        <div
          style="
            width: 70px;
            height: 70px;
            border-radius: 50%;
            overflow: hidden;
            background-color: #dee2e6;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1rem;
          "
        >
          <img
            src="<%= user.avatar || 'https://img.freepik.com/premium-vector/default-avatar-profile-icon-social-media-user-image-gray-avatar-icon-blank-profile-silhouette-vector-illustration_561158-3467.jpg' %>"
            alt="Profile Picture"
            style="width: 100%; height: auto;"
          />
        </div>
    
        <h5 class="mb-0"><%= user.firstName %></h5>
      </div>
      <ul class="nav flex-column" style="padding: 0; margin: 0">
        <li class="nav-item">
          <a
            class="nav-link <%= activePage === 'profileSetting' ? 'active' : '' %>"
            href="/userSettings/profilePreference/68084f433822e88df6ec532f"
            >Profile Preferences</a
          >
        </li>
        <li class="nav-item">
          <a
            class="nav-link <%= activePage === 'display' ? 'active' : '' %>"
            href="/userSettings/display/68084f433822e88df6ec532f"
            >Display</a
          >
        </li>
        <li class="nav-item">
          <a
            class="nav-link <%= activePage === 'security' ? 'active' : '' %>"
            href="/userSettings/security/68084f433822e88df6ec532f"
            >Account Security</a
          >
        </li>
        <li class="nav-item">
          <a
            class="nav-link <%= activePage === 'balance' ? 'active' : '' %>"
            href="/userSettings/balance/68084f433822e88df6ec532f"
            >Account Balance</a
          >
        </li>
      </ul>
    </nav>
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const menuButton = document.getElementById('sidebarToggle');
        const sidebar = document.getElementById('sidebarDropdown');
    
        if (menuButton && sidebar) {
          menuButton.addEventListener('click', function() {
            sidebar.classList.toggle('open');
          });
        }
      });
    </script>