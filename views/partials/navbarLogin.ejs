<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Updated Navbar</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    .navbar {
      padding: 10px 20px;
      border-bottom: 1px solid #eaeaea;
    }

    .logo {
      background-color: #d3d3d3;
      color: #555;
      width: 50px;
      height: 50px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 14px;
    }

    .search-input {
      width: 100%;
      background-color: #d3d3d3;
      border: none;
      border-radius: 25px;
      padding: 8px 15px;
      font-size: 1rem;
    }

    .search-container {
      flex: 1;
      max-width: 500px;
      min-width: 0;
    }

    .icon-btn {
      background: none;
      border: none;
      font-size: 1.25rem;
      padding: 0 10px;
    }

    .nav-links a {
      text-decoration: none;
      color: #333;
      margin-right: 15px;
      font-size: 1rem;
    }
    .nav-links a:hover{
        background-color: #0d6efd; /* Bootstrap primary */
      color: #fff;
      box-shadow: 0 8px 16px rgba(13, 110, 253, 0.3);
      transform: translateY(-2px);
      transition: all 0.3s ease;
      border-radius: 12px;
      padding: 8px 16px;
    }

    .navbar .container-fluid {
      flex-wrap: nowrap !important;
    }
    @media (max-width: 630px) {
      .desktop-links {
        display: none !important;
      }

      .navbar-toggler {
        display: block !important;
      }
    }

    @media (min-width: 631px) {
      .navbar-toggler {
        display: none !important;
      }

      #mobileLinks {
        display: none !important;
      }
    }
  </style>
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-light bg-white">
  <div class="container-fluid d-flex align-items-center">

    <!-- Toggler + Logo -->
    <div class="d-flex align-items-center flex-shrink-0 me-2">
      <button class="navbar-toggler me-2" type="button" data-bs-toggle="collapse" data-bs-target="#mobileLinks"
        aria-controls="mobileLinks" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <a class="navbar-brand me-0" href="#">
        <div class="logo">Logo</div>
      </a>
    </div>

    <!-- Search + Links -->
    <div class="d-flex align-items-center flex-nowrap flex-grow-1 gap-2 min-width-0">
      <!-- Search bar -->
      <div class="search-container me-2">
        <input type="text" class="search-input" placeholder="Search for courses now!">
      </div>

      <!-- Nav links inline (desktop only) -->
      <div class="d-flex align-items-center nav-links desktop-links">
        <a href="#">All Courses</a>
        <a href="#">My Courses</a>
        <a href="#">Forum</a>
      </div>
    </div>

    <!-- Right icons -->
    <div class="d-flex align-items-center gap-2 flex-shrink-0 ms-2 px-3">
      <button class="icon-btn"><i class="bi bi-cart3"></i></button>
      <button class="icon-btn"><i class="bi bi-bell"></i></button>
      <button class="icon-btn"><i class="bi bi-chat-dots"></i></button>
      <button class="icon-btn"><i class="bi bi-person-circle"></i></button>
    </div>
  </div>

  <!-- Mobile nav links -->
  <div class="collapse navbar-collapse d-md-none px-3" id="mobileLinks">
    <ul class="navbar-nav w-100 mt-2">
      <li class="nav-item "><a class="nav-link" href="#">All Courses</a></li>
      <li class="nav-item"><a class="nav-link" href="#">My Courses</a></li>
      <li class="nav-item"><a class="nav-link" href="#">Forum</a></li>
    </ul>
  </div>
</nav>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
