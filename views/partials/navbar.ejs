<nav
    class="navbar navbar-expand-lg navbar-light shadow-sm"
    style="
        background-color: #ffffff;
        padding: 10px 24px;
        border-bottom: 1px solid #eaeaea;
    "
>
    <div class="container-fluid" style="flex-wrap: nowrap">
        <!-- Brand Logo -->
        <a
            class="navbar-brand fw-bold text-dark"
            href="/"
            style="font-size: 1.4rem"
            >EduLearn</a
        >

        <!-- Toggler -->
        <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarMain"
            aria-controls="navbarMain"
            aria-expanded="false"
            aria-label="Toggle navigation"
        >
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar Content -->
        <div class="collapse navbar-collapse" id="navbarMain">
            <!-- Search -->
            <form class="d-flex flex-grow-1 me-4" style="max-width: 600px">
                <input
                    type="search"
                    class="form-control"
                    placeholder="Search for courses..."
                    aria-label="Search"
                    style="
                        background-color: #f2f2f2;
                        border: none;
                        border-radius: 50px;
                        padding: 8px 20px;
                    "
                />
            </form>

            <% if (!user) { %>
            <!-- Guest View -->
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item dropdown">
                    <a
                        class="nav-link dropdown-toggle"
                        href="#"
                        id="courseDropdown"
                        role="button"
                        data-bs-toggle="dropdown"
                        aria-expanded="false"
                        style="min-width: 120px"
                    >
                        Courses
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="courseDropdown">
                        <li>
                            <a class="dropdown-item" href="#">All Courses</a>
                        </li>
                        <li><a class="dropdown-item" href="#">Featured</a></li>
                        <li><a class="dropdown-item" href="#">New</a></li>
                    </ul>
                </li>
            </ul>

            <!-- Auth Buttons -->
            <div class="d-flex gap-2">
                <a
                    href="/auth/login"
                    class="btn btn-outline-primary px-4"
                    style="border-radius: 50px"
                    >Login</a
                >
                <a
                    href="/auth/register"
                    class="btn btn-primary px-4"
                    style="border-radius: 50px"
                    >Sign Up</a
                >
            </div>

            <% } else { %>
            <!-- Logged-in View -->
            <ul
                class="navbar-nav me-auto mb-2 mb-lg-0 d-none d-md-flex align-items-center"
                style="gap: 1rem"
            >
                <li class="nav-item">
                    <a
                        class="nav-link text-dark"
                        href="#"
                        style="font-weight: 500"
                        >All Courses</a
                    >
                </li>
                <li class="nav-item">
                    <a
                        class="nav-link text-dark"
                        href="#"
                        style="font-weight: 500"
                        >My Courses</a
                    >
                </li>
                <li class="nav-item">
                    <a
                        class="nav-link text-dark"
                        href="#"
                        style="font-weight: 500"
                        >Forum</a
                    >
                </li>
            </ul>

            <!-- Icons + Profile -->
            <div class="d-flex align-items-center gap-3">
                <a href="#" class="text-dark"
                    ><i class="bi bi-cart3 fs-5"></i
                ></a>
                <a href="#" class="text-dark"
                    ><i class="bi bi-bell fs-5"></i
                ></a>
                <a href="#" class="text-dark"
                    ><i class="bi bi-chat-dots fs-5"></i
                ></a>

                <div class="dropdown">
                    <a
                        href="#"
                        class="text-dark dropdown-toggle"
                        id="profileMenu"
                        data-bs-toggle="dropdown"
                        aria-expanded="false"
                    >
                        <i class="bi bi-person-circle fs-5"></i>
                    </a>
                    <ul
                        class="dropdown-menu dropdown-menu-end"
                        aria-labelledby="profileMenu"
                    >
                        <li>
                            <span class="dropdown-item-text fw-semibold">
                                <%= user.firstName %> <%= user.lastName %>
                            </span>
                        </li>
                        <li><hr class="dropdown-divider" /></li>
                        <li>
                            <a class="dropdown-item" href="/logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</nav>
