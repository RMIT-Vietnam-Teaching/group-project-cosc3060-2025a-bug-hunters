<nav
    class="navbar navbar-expand-lg shadow-sm"
    style="
        background-color: #fff;
        padding: 10px 24px;
        border-bottom: 1px solid #eaeaea;
    "
>
    <div class="container-fluid" style="flex-wrap: nowrap">
        <!-- Brand -->
        <a
            class="navbar-brand fw-bold text-dark"
            href="/"
            style="font-size: 1.4rem"
            >Level Up</a
        >

        <!-- Toggler -->
        <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarMain"
            aria-controls="navbarMain"
            aria-expanded="false"
            aria-label="Toggle navigation"
        >
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar Content -->
        <div class="collapse navbar-collapse" id="navbarMain">
            <!-- Search Bar -->
            <form class="d-flex flex-grow-1 me-4" style="max-width: 600px">
                <input
                    class="form-control"
                    type="search"
                    placeholder="Search for courses, posts..."
                    aria-label="Search"
                    style="
                        background-color: #f2f2f2;
                        border: none;
                        border-radius: 50px;
                        padding: 8px 20px;
                    "
                />
            </form>

            <% if (!user) { %>
            <!-- Guest View -->
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item dropdown">
                    <a
                        class="nav-link text-dark"
                        href="/courses"
                        style="font-weight: 500"
                        >All Courses</a
                    >
                </li>
            </ul>

            <div class="d-flex gap-2">
                <a
                    href="/auth/login"
                    class="btn px-4 fw-semibold"
                    style="
                        border: 2px solid #ee6c4d;
                        color: #ee6c4d;
                        border-radius: 30px;
                        background-color: transparent;
                        transition: all 0.3s ease;
                    "
                    onmouseover="this.style.backgroundColor='#ee6c4d'; this.style.color='white'"
                    onmouseout="this.style.backgroundColor='transparent'; this.style.color='#ee6c4d'"
                >
                    Login
                </a>
                <a
                    href="/auth/register"
                    class="btn px-4 fw-semibold"
                    style="
                        background-color: #ee6c4d;
                        color: white;
                        border: 2px solid #ee6c4d;
                        border-radius: 30px;
                        transition: all 0.3s ease;
                    "
                    onmouseover="this.style.backgroundColor='#c9644b'"
                    onmouseout="this.style.backgroundColor='#ee6c4d'"
                >
                    Register
                </a>
            </div>

            <% } else { %>
            <!-- Authenticated View -->
            <ul
                class="navbar-nav me-auto mb-2 mb-lg-0 d-none d-md-flex align-items-center"
                style="gap: 1rem"
            >
                <li class="nav-item">
                    <a
                        class="nav-link text-dark"
                        href="/courses"
                        style="font-weight: 500"
                        >All Courses</a
                    >
                </li>
                <li class="nav-item">
                    <a
                        class="nav-link text-dark"
                        href="/about-us"
                        style="font-weight: 500"
                        >About Us</a
                    >
                </li>

                <li class="nav-item">
                    <a
                        class="nav-link text-dark"
                        href="/forum"
                        style="font-weight: 500"
                        >Forum</a
                    >
                </li>

                <% if (user.role === 'Student') { %>
                <li class="nav-item">
                    <a
                        class="nav-link"
                        href="/user/my-courses"
                        style="
                            font-weight: 600;
                            color: #ffffff;
                            background-color: #ee6c4d;
                            padding: 6px 16px;
                            border-radius: 20px;
                            box-shadow: 0 2px 6px rgba(238, 108, 77, 0.4);
                            transition: all 0.3s ease;
                        "
                        onmouseover="this.style.backgroundColor='#d6593f'"
                        onmouseout="this.style.backgroundColor='#ee6c4d'"
                    >
                        My Courses
                    </a>
                </li>
                <% } else { %>
                <li class="nav-item">
                    <a
                        class="nav-link"
                        href="/instructor/my-courses"
                        style="
                            font-weight: 600;
                            color: #ffffff;
                            background-color: #ee6c4d;
                            padding: 6px 16px;
                            border-radius: 20px;
                            box-shadow: 0 2px 6px rgba(238, 108, 77, 0.4);
                            transition: all 0.3s ease;
                        "
                        onmouseover="this.style.backgroundColor='#d6593f'"
                        onmouseout="this.style.backgroundColor='#ee6c4d'"
                    >
                        My Teaching
                    </a>
                </li>
                <% } %>
            </ul>

            <!-- Icons & Profile -->
            <div class="d-flex align-items-center gap-3">
                <a href="/cart" class="text-dark position-relative">
                    <i class="bi bi-cart3 fs-5"></i>
                    <% if (cartCount > 0) { %>
                      <span
                        class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        <%= cartCount %>
                        <span class="visually-hidden">items in cart</span>
                      </span>
                    <% } %>
                  </a>
                <!-- <a href="#" class="text-dark"
                    ><i class="bi bi-bell fs-5"></i
                ></a> -->
                <a href="/message" class="text-dark"
                    ><i class="bi bi-chat-dots fs-5"></i
                ></a>

                <!-- Avatar Dropdown -->
                <div class="dropdown">
                    <!-- Trigger with avatar and black arrow -->
                    <a
                        href="#"
                        id="profileMenu"
                        data-bs-toggle="dropdown"
                        aria-expanded="false"
                        class="d-flex align-items-center text-dark text-decoration-none dropdown-toggle"
                        style="gap: 6px"
                    >
                        <img
                            src="<%= user.avatar %>"
                            alt="Avatar"
                            style="
                                width: 40px;
                                height: 40px;
                                border-radius: 50%;
                                object-fit: cover;
                            "
                        />
                    </a>

                    <ul
                        class="dropdown-menu dropdown-menu-end shadow"
                        aria-labelledby="profileMenu"
                        style="
                            min-width: 260px;
                            border-radius: 12px;
                            overflow: hidden;
                        "
                    >
                        <!-- User Info -->
                        <a
                            href="/userProfile/<%= user._id %>"
                            class="d-block text-decoration-none text-dark profile-user-link"
                        >
                            <li
                            class="px-3 py-3 d-flex align-items-center gap-2"
                            style="border-bottom: 1px solid #dee2e6;"
                            >
                            <img
                                src="<%= user.avatar %>"
                                alt="Avatar"
                                style="width:48px; height:48px; border-radius:50%; object-fit:cover;"
                            />
                            <div class="d-flex flex-column">
                                <span class="fw-bold">
                                <%= user.firstName %> <%= user.lastName %>
                                </span>
                                <small class="text-muted"><%= user.email %></small>
                            </div>
                            </li>
                        </a>
                        
                          

                        <% if (user.role === 'Student') { %>
                        <!-- Learning -->
                        <li class="py-2">
                            <a class="dropdown-item" href="/my-courses"
                                >My learning</a
                            >
                        </li>

                        <!-- Cart -->
                        <li class="py-2" style="border-bottom: 1px solid #dee2e6">
                            <a class="dropdown-item d-flex align-items-center justify-content-between" href="/cart">
                              My Cart
                              <% if (cartCount > 0) { %>
                                <span class="badge bg-danger rounded-pill"><%= cartCount %></span>
                              <% } %>
                            </a>
                          </li>
                        <% } else if (user.role === 'Instructor') { %>

                            <li
                                class="py-2"
                                style="border-bottom: 1px solid #dee2e6"
                            >
                                <a class="dropdown-item" href="#"
                                    >My Course Program</a
                                >
                            </li>
                            <% } %>

                        <!-- Notifications -->
                        <!-- <li class="py-2">
                            <a class="dropdown-item" href="#">Notifications</a>
                        </li> -->

                        <!-- Messages -->
                        <li
                            class="py-2"
                            style="border-bottom: 1px solid #dee2e6"
                        >
                            <a class="dropdown-item" href="/messages"
                                >Messages</a
                            >
                        </li>

                        <!-- Edit Profile -->
                        <li
                            class="py-2"
                            style="border-bottom: 1px solid #dee2e6"
                        >
                            <a
                                class="dropdown-item"
                                href="/userSettings/profilePreference/<%= user._id %>"
                                >Edit Profile</a
                            >
                        </li>

                        <!-- Logout -->
                        <li class="py-2">
                            <a
                                class="dropdown-item text-danger fw-semibold"
                                href="/auth/logout"
                            >
                                Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</nav>
<style>
    /* Hover‐state for the “User Info” row in your dropdown */
    .profile-user-link li {
      transition: background-color 0.2s ease;
    }
    .profile-user-link:hover li {
      background-color: #eceded; 
    }
  </style>
<!-- //to update cart couunt in real-time -->
<script src="/js/cart.js"></script>