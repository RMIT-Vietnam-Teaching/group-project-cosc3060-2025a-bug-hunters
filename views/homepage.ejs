<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Level Up</title>

    <!-- Bootstrap 5 CSS CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- Bootstrap Icons CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
      rel="stylesheet"
    />

    <!-- NavBar CSS -->
    <link rel="stylesheet" href="/css/navBarStyle.css" />
    <!-- Carousel CSS -->
    <link rel="stylesheet" href="/css/carousel.css" />
    <!-- Course Cards CSS -->
    <link rel="stylesheet" href="/css/courseSection.css" />
    <!-- Student Stories CSS -->
    <link rel="stylesheet" href="/css/studentStories.css" />
    <!-- Learning Path CSS -->
    <link rel="stylesheet" href="/css/learningPath.css" />
    <!-- Dark Mode CSS -->
    <link rel="stylesheet" href="/css/darkMode.css" />
  </head>
  <body>
    <!-- Rest of your HTML remains the same -->
    <%- include('partials/navbar') %>

    <!-- Main content -->
    <!--Hero Banner Section -->
    <section id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
      <!-- Indicators -->
      <div class="carousel-indicators">
        <button
          type="button"
          data-bs-target="#heroCarousel"
          data-bs-slide-to="0"
          class="active"
          aria-current="true"
          aria-label="Slide 1"
        ></button>
        <button
          type="button"
          data-bs-target="#heroCarousel"
          data-bs-slide-to="1"
          aria-label="Slide 2"
        ></button>
        <button
          type="button"
          data-bs-target="#heroCarousel"
          data-bs-slide-to="2"
          aria-label="Slide 3"
        ></button>
      </div>

      <div class="carousel-inner">
        <!-- Slide 1 -->
        <div class="carousel-item active" data-bs-interval="3000">
          <img src="images/heroBanner1.jpg" class="d-block w-100 banner-img" />
          <div class="carousel-caption carousel-centered">
            <div class="carousel-caption text-center">
              <h1 class="banner-text">
                Unlock Your Potential â€“ One Course at a Time.
              </h1>
            </div>
          </div>
        </div>

        <!-- Slide 2 -->
        <div class="carousel-item" data-bs-interval="3000">
          <img src="images/heroBanner2.jpg" class="d-block w-100 banner-img" />
          <div class="carousel-caption text-center">
            <h1 class="banner-text">Learn Anywhere - At Anytime.</h1>
          </div>
        </div>

        <!-- Slide 3 -->
        <div class="carousel-item" data-bs-interval="3000">
          <img src="images/heroBanner3.jpg" class="d-block w-100 banner-img" />
          <div class="carousel-caption text-center">
            <h1 class="banner-text">
              Empower Your Future - Through Knowledge.
            </h1>
          </div>
        </div>
      </div>

      <!-- Controls -->
      <button
        class="carousel-control-prev"
        type="button"
        data-bs-target="#heroCarousel"
        data-bs-slide="prev"
      >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>

      <button
        class="carousel-control-next"
        type="button"
        data-bs-target="#heroCarousel"
        data-bs-slide="next"
      >
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </section>

    <!--Toggle Buttons (New Courses and Popular Courses)-->
    <!-- Course Toggle Buttons -->
    <div class="text-center my-5">
      <button class="btn newCourse-btn active" id="newCoursesBtn">
        New Courses
      </button>
      <button class="btn btn-outline-secondary" id="popularCoursesBtn">
        Popular Courses
      </button>
    </div>

    <!-- Course Cards Grid -->
    <div class="container">
     <!-- New Courses Section -->
<div class="row" id="newCoursesList">
  <% if (newCourses && newCourses.length > 0) { %> 
    <% newCourses.forEach(course => { %>
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <!-- Add category badge -->
          <div class="course-category">
            <%= course.category || 'General' %>
          </div>

          <!-- Card image -->
          <img
            src="<%= course.imageUrl || course.imageURL || 'images/course-placeholder.jpg' %>"
            class="card-img-top"
            alt="<%= course.title %>"
          />

          <!-- Card body -->
          <div class="card-body">
            <h5 class="card-title fw-bold text-center">
              <%= course.title %>
            </h5>
            <p class="text-center text-muted">
              by <%= course.instructor || 'Unknown Instructor' %>
            </p>
            <p class="card-text">
              <% if (course.description) { %> 
                <%= course.description.substring(0, 100) %> 
                <%= course.description.length > 100 ? '...' : '' %> 
              <% } else { %>
                No description available. 
              <% } %>
            </p>

            <!-- Course metadata -->
            <div class="course-meta-container">
              <div>
                <i class="bi bi-clock me-2"></i>
                <%= course.duration || 'Duration not specified' %>
              </div>
              <div>
                <i class="bi bi-star-fill me-2"></i>
                <%= course.rating || 0 %> 
                (<%= Math.floor(Math.random() * 1000) %>)
              </div>
            </div>

            <!-- Price tag (if applicable) -->
            <% if (course.price) { %>
              <div class="course-price">
                <%= course.price === 0 ? 'Free' : '$' + course.price %>
              </div>
            <% } %>
          </div>

          <!-- Make entire card clickable -->
          <a
            href="/courses/<%= course._id %>"
            class="card-link-wrapper"
            aria-label="View <%= course.title %>"
          ></a>
        </div>
      </div>
    <% }); %>
  <% } else { %>
    <div class="col-12 text-center py-5">
      <p>
        No courses available yet. Be the first to
        <a href="/courses/create">create a course</a>!
      </p>
    </div>
  <% } %>
</div>

<!-- Popular Courses Section (hidden by default) -->
<div class="row" id="popularCoursesList" style="display: none">
  <% if (popularCourses && popularCourses.length > 0) { %> 
    <% popularCourses.forEach(course => { %>
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <!-- Add category badge -->
          <div class="course-category">
            <%= course.category || 'General' %>
          </div>
          
          <!-- Card image -->
          <img
            src="<%= course.imageUrl || course.imageURL || 'images/course-placeholder.jpg' %>"
            class="card-img-top"
            alt="<%= course.title %>"
          />
          
          <!-- Card body -->
          <div class="card-body">
            <h5 class="card-title fw-bold text-center">
              <%= course.title %>
            </h5>
            <p class="text-center text-muted">
              by <%= course.instructor || 'Unknown Instructor' %>
            </p>
            <p class="card-text">
              <% if (course.description) { %> 
                <%= course.description.substring(0, 100) %>
                <%= course.description.length > 100 ? '...' : '' %> 
              <% } else { %>
                No description available. 
              <% } %>
            </p>
            
            <!-- Course metadata -->
            <div class="course-meta-container">
              <div>
                <i class="bi bi-clock me-2"></i> 
                <%= course.duration || 'Duration not specified' %>
              </div>
              <div>
                <i class="bi bi-star-fill me-2"></i> 
                <%= course.rating || 0 %> 
                (<%= Math.floor(Math.random() * 1000) %>)
              </div>
            </div>
            
            <!-- Price tag (if applicable) -->
            <% if (course.price) { %>
              <div class="course-price">
                <%= course.price === 0 ? 'Free' : '$' + course.price %>
              </div>
            <% } %>
          </div>
          
          <!-- Make entire card clickable -->
          <a href="/courses/<%= course._id %>" class="card-link-wrapper" aria-label="View <%= course.title %>"></a>
        </div>
      </div>
    <% }); %> 
  <% } else { %>
    <div class="col-12 text-center py-5">
      <p>No popular courses available yet.</p>
    </div>
  <% } %>
</div>

    <!-- JavaScript for toggling between course lists -->
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const newCoursesBtn = document.getElementById("newCoursesBtn");
        const popularCoursesBtn = document.getElementById("popularCoursesBtn");
        const newCoursesList = document.getElementById("newCoursesList");
        const popularCoursesList =
          document.getElementById("popularCoursesList");

        newCoursesBtn.addEventListener("click", function () {
          newCoursesList.style.display = "flex";
          popularCoursesList.style.display = "none";
          newCoursesBtn.classList.add("active");
          newCoursesBtn.classList.remove("btn-outline-secondary");
          popularCoursesBtn.classList.remove("active");
          popularCoursesBtn.classList.add("btn-outline-secondary");
        });

        popularCoursesBtn.addEventListener("click", function () {
          newCoursesList.style.display = "none";
          popularCoursesList.style.display = "flex";
          popularCoursesBtn.classList.add("active");
          popularCoursesBtn.classList.remove("btn-outline-secondary");
          newCoursesBtn.classList.remove("active");
          newCoursesBtn.classList.add("btn-outline-secondary");
        });
      });
    </script>

    <!--Student Stories Section-->
    <%- include('partials/learningPath') %>

    <!--Student Stories Section-->
    <%- include('partials/studentStories') %>

    <!--Page Footer-->
    <%- include('partials/footer') %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Subcription Form-->
    <script src="/js/footer.js"></script>

    <!-- Dark Mode JavaScript -->
    <script src="/js/darkMode.js"></script>

  </body>
</html>
