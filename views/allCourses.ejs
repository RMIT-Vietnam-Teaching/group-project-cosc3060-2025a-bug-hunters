<%- include('partials/navbar') %>

<div class="container my-4">
  <h2>All Courses</h2>

  <!-- Category Buttons -->
  <div class="btn-group mb-4" role="group">
    <a href="/courses" class="btn btn-outline-primary <%= !selectedCategory ? 'active' : '' %>">All</a>
    <% categories.forEach(cat => { %>
      <a href="/courses?category=<%= cat %>" class="btn btn-outline-primary <%= selectedCategory === cat ? 'active' : '' %>"><%= cat %></a>
    <% }) %>
  </div>

  <!-- Course Cards -->
  <div class="row">
    <% courses.forEach(course => { %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <img src="<%= course.imageUrl %>" class="card-img-top" alt="<%= course.title %>">
          <div class="card-body">
            <h5 class="card-title"><%= course.title %></h5>
            <p class="card-text"><%= course.description %></p>
            <p class="text-muted">Category: <%= course.category %></p>
            <a href="#" class="btn btn-primary">View Course</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<%- include('partials/footer') %>
