<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>All Courses</title>

        <!-- Bootstrap 5 CSS CDN -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />

        <!-- Bootstrap Icons CDN -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
            rel="stylesheet"
        />

        <!-- Custom CSS -->
        <link rel="stylesheet" href="/css/navBarStyle.css" />
        <link rel="stylesheet" href="/css/allCourse.css" />
        <link rel="stylesheet" href="/css/darkMode.css" />
    </head>
    <body>
        <!-- Include Nav Bar -->
        <%- include('partials/navbar') %>

        <div class="container my-4">
            <h2>All Courses</h2>

            <!-- Category Buttons -->
           <div class="category-carousel-container mb-4 d-flex align-items-center">
                <button class="scroll-btn left"><i class="bi bi-chevron-left"></i></button>

                <div class="category-carousel flex-nowrap overflow-auto d-flex">
                    <a href="/courses" class="btn btn-all <%= !selectedCategory ? 'active' : '' %>">All</a>
                    <% categories.forEach(cat => { %>
                        <a
                            href="/courses?category=<%= cat %>"
                            class="btn btn-categories <%= selectedCategory === cat ? 'active' : '' %>">
                            <%= cat %>
                        </a>
                    <% }) %>
                </div>

                <button class="scroll-btn right"><i class="bi bi-chevron-right"></i></button>
            </div>


            <!-- Course Cards Grid -->
            <div class="container">
                <div class="row" id="courseList">
                    <% courses.forEach(course => { %>
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 shadow-sm">
                            <img
                                src="<%= course.image || '/images/course-placeholder.jpg' %>"
                                class="card-img-top"
                                alt="<%= course.name || 'Course Thumbnail' %>"
                            />

                            <div class="card-body">
                                <h5
                                    class="card-title fw-bold text-center fst-italic"
                                >
                                    <%= course.name || 'Untitled Course' %>
                                </h5>
                                <p class="text-center fst-italic text-muted">
                                    by <%= course.author.firstName %> <%=
                                    course.author.lastName %>
                                </p>
                                <p class="card-text">
                                    <% if (course.description) { %> <%=
                                    course.description.substring(0, 100) %><%=
                                    course.description.length > 100 ? '...' : ''
                                    %> <% } else { %> No description available.
                                    <% } %>
                                </p>
                                <div
                                    class="d-flex justify-content-start align-items-center mb-1"
                                >
                                    <i class="bi bi-clock me-2"></i>
                                    <%= course.duration || 'N/A' %>
                                </div>
                                <div
                                    class="d-flex justify-content-start align-items-center"
                                >
                                    <i class="bi bi-star-fill me-2"></i>
                                    <%= course.rating.toFixed(1) || '0.0' %>
                                    (<%= course.reviews?.length || 0 %>)
                                </div>
                            </div>
                            <div class="card-footer bg-white text-center">
                                <a
                                    href="/courses/<%= course._id %>"
                                    class="btn btn-lg rounded-pill text-white"
                                    style="background-color: #ee6c4d"
                                >
                                    <% if (user.role === 'Student') { %> 
                                        Enroll
                                    <% } else { %> 
                                        View     
                                    <% } %>
                                </a>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>

        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>

        <!-- Category Carousel Script -->
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const carousel = document.querySelector(".category-carousel");
                document.querySelector(".scroll-btn.left").addEventListener("click", () => {
                    carousel.scrollBy({ left: -200, behavior: "smooth" });
                });
                document.querySelector(".scroll-btn.right").addEventListener("click", () => {
                    carousel.scrollBy({ left: 200, behavior: "smooth" });
                });
            });
        </script>
    </body>
</html>
