    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

        :root {
            /* Primary color updated */
            --primary: #c95535;
            --primary-dark: #c95535;
            --secondary: #10b981;
            --dark: #1e293b;
            --light: #f8fafc;
            --gray: #64748b;
            --light-gray: #e2e8f0;
            --danger: #ef4444;
            --warning: #f59e0b;
        }

        body {
            font-family: 'Inter', sans-serif;
            margin: 0;
            padding: 0;
            background-color: var(--light);
            color: var(--dark);
            line-height: 1.6;
        }

        .dark-mode {
            --primary: #3b82f6;
            --primary-dark: #2563eb;
            --secondary: #10b981;
            --dark: #f8fafc;
            --light: #0f172a;
            --gray: #94a3b8;
            --light-gray: #1e293b;
        }

        .sitemap-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 1.5rem;
        }

        .sitemap-header {
            text-align: center;
            margin-bottom: 3rem;
        }

        .sitemap-header h1 {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            color: var(--dark);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 1rem;
        }

        .sitemap-header p {
            color: var(--gray);
            max-width: 600px;
            margin: 0 auto;
        }

        .sitemap-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
        }

        .sitemap-section {
            background-color: white;
            border-radius: 10px;
            padding: 1.5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
            border-top: 4px solid var(--primary);
        }

        .sitemap-section:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
        }

        .sitemap-section h2 {
            font-size: 1.3rem;
            margin-top: 0;
            margin-bottom: 1.2rem;
            color: var(--dark);
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .sitemap-section ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .sitemap-section li {
            margin: 0.8rem 0;
        }

        .sitemap-section a {
            text-decoration: none;
            color: var(--gray);
            display: flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.2s ease;
            padding: 0.5rem 0;
        }

        .sitemap-section a:hover {
            color: var(--primary);
            transform: translateX(5px);
        }

        .sitemap-section i {
            font-size: 1.2rem;
            opacity: 0.7;
        }

        @media (max-width: 768px) {
            .sitemap-grid {
                grid-template-columns: 1fr;
            }

            .sitemap-header h1 {
                font-size: 2rem;
            }
        }
    </style>
</head>
