<!DOCTYPE html>
<html lang="en">
<%- include('partials/InstructorUpload/headTag', { 
    title: 'Upload Page', 
    stylesheet: 'instrucPage.css' 
}) %>

<body>
<div class="container">
  <!-- Header -->
  <div class="header d-flex justify-content-between align-items-center my-4">

    <div class="dropdown">
      <button class="btn dropdown-toggle" type="button" id="sortDropdown" data-bs-toggle="dropdown" aria-expanded="false">
          <span id="currentSortText">Newest</span>
          <i class="fas fa-chevron-down ms-1"></i>
      </button>
      <ul class="dropdown-menu" aria-labelledby="sortDropdown">
        <li><a class="dropdown-item sort-option" href="#" data-sort="newest">Newest</a></li>
        <li><a class="dropdown-item sort-option" href="#" data-sort="oldest">Oldest</a></li>
        <li><a class="dropdown-item sort-option" href="#" data-sort="mostPopular">Most Popular</a></li>
        <li><a class="dropdown-item sort-option" href="#" data-sort="highestRated">Highest Rated</a></li>
      </ul>
    </div>

    <!-- Upload Button of the page -->
    <button type="button" class="btn upload-btn" data-bs-toggle="modal" data-bs-target="#uploadModal">
      Upload
    </button>
  </div>

  <!-- Course Cards -->
  <div class="row" id="coursesContainer">
    <% if (courses && courses.length > 0) { %>
      <% courses.forEach(course => { %>
        <div class="col-lg-4 col-md-6 col-12 mb-4 course-card-container" 
             data-updated="<%= course.updatedAt ? course.updatedAt.toISOString() : '' %>"
             data-rating="<%= course.rating %>"
             data-enrollments="<%= course.enrollments %>">
          <div class="course-card shadow p-3 rounded">
            <div class="course-img mb-3">
              <div class="badge-container">
                <img src="/uploads/<%= course.files[0] %>" alt="Badge">
              </div>
            </div>
            <div class="course-info">
              <h4 class="h6"><%= course.title %></h4>
              <div class="course-meta mb-2">
                <i class="fas fa-users icon"></i>
                <span><%= course.enrollments %> Enrollments</span>
                <span class="mx-2">|</span>
                <i class="fas fa-star star"></i>
                <span><%= course.rating %> (<%= course.reviewCount %> reviews)</span>
              </div>
              <div class="course-meta mb-3">
                <i class="fas fa-calendar-alt icon"></i>
                <span>Last updated: 
                  <% if (course.updatedAt) { %>
                    <%= course.updatedAt.toISOString().split('T')[0] %>
                  <% } else { %>
                    N/A
                  <% } %>
                </span>
              </div>
              <div class="d-flex gap-2">
                <button type="button" class="btn btn-outline-primary w-100" data-bs-toggle="modal" data-bs-target="#editModal-<%= course._id %>">
                  Edit
                </button>
                <form action="/delete-course/<%= course._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this course?')" class="w-100">
                  <button type="submit" class="btn btn-outline-danger w-100">Delete</button>
                </form>
                <a href="/feedback/<%= course._id %>" class="btn btn-outline-secondary w-100">Feedback</a>
              </div>
            </div>
          </div>
        </div>

        <!-- Edit Modal -->
        <div class="modal fade" id="editModal-<%= course._id %>" tabindex="-1" aria-labelledby="editModalLabel-<%= course._id %>" aria-hidden="true">
          <div class="modal-dialog">
            <form action="/edit-course/<%= course._id %>" method="POST" enctype="multipart/form-data" class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title">Edit Course</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <div class="mb-3">
                  <label class="form-label">Title</label>
                  <input type="text" class="form-control" name="title" value="<%= course.title %>">
                </div>
                <div class="mb-3">
                  <label class="form-label">Category</label>
                  <select class="form-control" name="category">
                    <option value="Development" <%= course.category === 'Development' ? 'selected' : '' %>>Development</option>
                    <option value="Design" <%= course.category === 'Design' ? 'selected' : '' %>>Design</option>
                    <option value="Marketing" <%= course.category === 'Marketing' ? 'selected' : '' %>>Marketing</option>
                    <option value="Business" <%= course.category === 'Business' ? 'selected' : '' %>>Business</option>
                    <option value="CyberSecurity" <%= course.category === 'CyberSecurity' ? 'selected' : '' %>>CyberSecurity</option>
                  </select>
                </div>
                <div class="mb-3">
                  <label class="form-label">Enrollments</label>
                  <input type="number" class="form-control" name="enrollments" value="<%= course.enrollments %>">
                </div>
                <div class="mb-3">
                  <label class="form-label">Rating</label>
                  <input type="number" step="0.1" class="form-control" name="rating" value="<%= course.rating %>">
                </div>
                <div class="mb-3">
                  <label class="form-label">Review Count</label>
                  <input type="number" class="form-control" name="reviewCount" value="<%= course.reviewCount %>">
                </div>

                <div class="mb-3">
                    <label class="form-label">Upload Course Files</label>
                    <input type="file" class="form-control" name="courseMaterials" multiple>
                </div>
              </div>
              <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Update</button>
              </div>
            </form>
          </div>
        </div>

      <% }) %>
    <% } else { %>
      <div class="col-12 text-center">
        <p class="text-muted">No courses uploaded yet.</p>
      </div>
    <% } %>
  </div>
</div>

<!-- Upload Modal -->
<div class="modal fade" id="uploadModal" tabindex="-1" aria-labelledby="uploadModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <form action="/submit-course" method="POST" enctype="multipart/form-data" class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="uploadModalLabel">Upload New Course</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="mb-3">
          <label class="form-label">Course Title</label>
          <input type="text" class="form-control" name="title">
        </div>
        <div class="mb-3">
          <label class="form-label">Category</label>
          <select class="form-control" name="category">
            <option value="" hidden>Select a category</option>
            <option value="Development">Development</option>
            <option value="Design">Design</option>
            <option value="Marketing">Marketing</option>
            <option value="Business">Business</option>
            <option value="CyberSecurity">CyberSecurity</option>
          </select>
        </div>
        <div class="mb-3">
          <label class="form-label">Enrollments</label>
          <input type="number" class="form-control" name="enrollments">
        </div>
        <div class="mb-3">
          <label class="form-label">Rating</label>
          <input type="number" step="0.1" class="form-control" name="rating">
        </div>
        <div class="mb-3">
          <label class="form-label">Review Count</label>
          <input type="number" class="form-control" name="reviewCount">
        </div>
        <div class="mb-3">
          <label class="form-label">Upload Course Files</label>
          <input type="file" class="form-control" name="courseMaterials" multiple>
        </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Save Course</button>
      </div>
    </form>
  </div>
</div>

 <!-- Scripts -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
<script src="/js/instrucPage.js"></script>

</body>
</html>

