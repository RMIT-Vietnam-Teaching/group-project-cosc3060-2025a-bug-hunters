<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create New Course - LearnNow</title>
  
  <!-- Bootstrap 5 CSS CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <!-- Bootstrap Icons CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
  
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/navBarStyle.css">
  <link rel="stylesheet" href="/css/createCourse.css">
</head>
<body>
  <!--Include Nav Bar-->
  <%- include('partials/navbar') %>

  <div class="container my-5">
    <div class="form-container">
      <div class="course-form-header text-center mb-4">
        <h2>Create New Course</h2>
        <p class="text-muted">Share your knowledge with the world</p>
      </div>
      
      <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-danger" role="alert">
          <%= error %>
        </div>
      <% } %>
      
      <form action="/courses/create" method="POST" class="needs-validation" enctype="multipart/form-data" novalidate>
        <!-- Course Title -->
        <div class="mb-3">
          <label for="title" class="form-label required-field">Course Title</label>
          <input type="text" class="form-control" id="title" name="title" required
            value="<%= typeof formData !== 'undefined' ? formData.title : '' %>">
          <div class="invalid-feedback">
            Please provide a course title.
          </div>
        </div>
        
        <!-- Course Description -->
        <div class="mb-3">
          <label for="description" class="form-label required-field">Course Description</label>
          <textarea class="form-control" id="description" name="description" rows="4" required><%= typeof formData !== 'undefined' ? formData.description : '' %></textarea>
          <div class="invalid-feedback">
            Please provide a course description.
          </div>
        </div>
        
        <!-- Instructor Selection -->
        <div class="mb-3">
          <label for="instructor" class="form-label required-field">Instructor</label>
          <select class="form-select" id="instructor" name="instructor" required>
            <option value="" disabled <%= typeof formData === 'undefined' ? 'selected' : '' %>>Select an instructor</option>
            <% if (instructors && instructors.length > 0) { %>
              <% instructors.forEach(instructor => { %>
                <option value="<%= instructor._id %>" <%= typeof formData !== 'undefined' && formData.instructor === instructor._id ? 'selected' : '' %>>
                  <%= instructor.name %>
                </option>
              <% }) %>
            <% } else { %>
              <option value="current" selected>Current User</option>
            <% } %>
          </select>
          <div class="invalid-feedback">
            Please select an instructor.
          </div>
        </div>
        
        <div class="row">
          <!-- Course Duration -->
<div class="col-md-6 mb-3">
  <label for="duration" class="form-label required-field">Course Duration</label>
  <div class="row">
    <div class="col-6">
      <div class="input-group">
        <input type="number" class="form-control" id="durationHours" name="durationHours" min="0" max="999" placeholder="Hours" required
          value="<%= typeof formData !== 'undefined' && formData.durationHours ? formData.durationHours : '' %>">
        <span class="input-group-text">hr</span>
      </div>
    </div>
    <div class="col-6">
      <div class="input-group">
        <input type="number" class="form-control" id="durationMinutes" name="durationMinutes" min="0" max="59" placeholder="Minutes"
          value="<%= typeof formData !== 'undefined' && formData.durationMinutes ? formData.durationMinutes : '0' %>">
        <span class="input-group-text">min</span>
      </div>
    </div>
  </div>
  <div class="form-text">Enter the total duration of the course</div>
  <div class="invalid-feedback">
    Please specify the course duration.
  </div>
</div>
          
          <!-- Course Category -->
          <div class="col-md-6 mb-3">
            <label for="category" class="form-label required-field">Category</label>
            <select class="form-select" id="category" name="category" required>
              <option value="" disabled <%= typeof formData === 'undefined' ? 'selected' : '' %>>Select a category</option>
              <% categories.forEach(category => { %>
                <option value="<%= category %>" <%= typeof formData !== 'undefined' && formData.category === category ? 'selected' : '' %>>
                  <%= category %>
                </option>
              <% }) %>
            </select>
            <div class="invalid-feedback">
              Please select a category.
            </div>
          </div>
        </div>
        
        <!-- Course Image Upload -->
        <div class="mb-3">
          <label for="courseImage" class="form-label required-field">Course Image</label>
          <input type="file" class="form-control" id="courseImage" name="courseImage" accept="image/*" required>
          <div class="form-text">Upload an image that represents your course (max 5MB).</div>
          <div class="invalid-feedback">
            Please select a course image.
          </div>
        </div>
        
        <!-- Submit Button -->
        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
          <a href="/courses" class="btn btn-outline-secondary me-md-2">Cancel</a>
          <button type="submit" class="btn btn-primary">Create Course</button>
        </div>
      </form>
    </div>
  </div>

  <!--Include Footer-->
  <%- include('partials/footer') %>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  
  <!-- Form validation script -->
  <script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
    (function () {
      'use strict'
      
      // Fetch all the forms we want to apply custom Bootstrap validation styles to
      var forms = document.querySelectorAll('.needs-validation')
      
      // Loop over them and prevent submission
      Array.prototype.slice.call(forms)
        .forEach(function (form) {
          form.addEventListener('submit', function (event) {
            if (!form.checkValidity()) {
              event.preventDefault()
              event.stopPropagation()
            }
            
            form.classList.add('was-validated')
          }, false)
        })
    })()
  </script>
</body>
</html>