<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Account Security</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/userSetting.css" />
</head>

<body data-theme="<%= user.theme %>">
  <!-- navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4">
    <a class="navbar-brand" href="#">YourSite</a>
    <div class="ms-auto">
      <span class="text-white me-3">Welcome, <%= user.firstName %></span>
    </div>
  </nav>

  <div style="position: fixed; top: 20px; left: 50%; transform: translateX(-50%); z-index: 1055; width: auto; max-width: 90%;">
    <% if (typeof success !== 'undefined') { %>
      <div class="alert alert-success alert-dismissible fade show p-2 m-0" role="alert">
        <%= success %>
      </div>
    <% } %>
    <% if (typeof error !== 'undefined') { %>
      <div class="alert alert-danger alert-dismissible fade show p-2 m-0" role="alert">
        <%= error %>
      </div>
    <% } %>
  </div>

  <div class="container-fluid">
    <div class="row vh-100">

      <!-- sidebar -->
      <%- include('partials/userSettings/sideBar') %>

      <!-- main Content -->
      <%- include('partials/userSettings/userSecurity') %>
    </div>
  </div>
  
</body>
</html>