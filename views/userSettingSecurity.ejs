<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Account Security</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/userSetting.css" />
  <style>


@media (min-width: 768px) {
  .sidebar-container {
    width: 240px;
    min-height: 100vh;
    background-color: #fdf8f3;
    border-right: 1px solid #eee;
    padding-top: 2rem;
  }

  .main-content {
    margin-left: 240px; /* Same as sidebar width */
    padding: 2rem;
  }
}

/* === SIDEBAR NAV LINK STYLES === */
.sidebar-container .nav-link.active {
  background-color: #e07b4f;
  color: white;
  font-weight: bold;
  border-radius: 12px;
  box-shadow: 0 4px 8px rgba(224, 123, 79, 0.3);
  padding: 12px 16px;
}

.sidebar-container .nav-link {
  padding: 12px 16px;
  color: #212529;
  transition: all 0.2s ease;
}

.sidebar-container .nav-link:hover {
  background-color: #ffe9dd;
  border-radius: 12px;
}

/* === DARK MODE SUPPORT === */
body.dark .sidebar-container {
  background-color: #1f1f1f;
  border-right: 1px solid #444;
}

body.dark .sidebar-container .nav-link {
  color: #ccc;
}

body.dark .sidebar-container .nav-link.active {
  background-color: #f3c6a0;
  color: #1f1f1f;
}

body.dark .sidebar-container .nav-link:hover {
  background-color: #333;
  color: white;
}

/* === MOBILE SIDEBAR === */
@media (max-width: 767px) {
  #leftMobileSidebar {
    position: fixed;
    top: 0;
    left: 0;
    width: 260px;
    height: 100vh;
    background-color: #fff;
    color: #212529;
    padding: 24px 16px;
    border-right: 1px solid #e0e0e0;
    z-index: 1500;
    transform: translateX(-100%);
    transition: transform 0.3s ease-in-out;
  }

  #leftMobileSidebar.open {
    transform: translateX(0);
  }

  body.dark #leftMobileSidebar {
    background-color: #1f1f1f;
    color: #f5f5f5;
    border-right: 1px solid #333;
  }

  #leftMobileSidebar .nav-link {
    padding: 12px 18px;
    margin-bottom: 12px;
    border-radius: 8px;
    color: #212529;
  }

  body.dark #leftMobileSidebar .nav-link {
    color: #ccc;
  }

  #leftMobileSidebar .nav-link.bg-orange {
    background-color: #e07b4f !important;
    color: #fff !important;
  }

  body.dark #leftMobileSidebar .nav-link.bg-orange {
    background-color: #f3c6a0 !important;
    color: #1f1f1f !important;
  }
}

/* === HAMBURGER MENU === */
.mobile-menu-button {
  background: none;
  border: none;
  padding: 0;
  cursor: pointer;
  display: flex;
  flex-direction: column;
  gap: 5px;
  width: 30px;
  height: 30px;
  margin-right: 10px;
  z-index: 2000;
  color: #000;
}

.mobile-menu-button span {
  display: block;
  width: 24px;
  height: 3px;
  border-radius: 2px;
}

body:not(.dark) .mobile-menu-button span {
  background-color: #000;
}

body.dark .mobile-menu-button span {
  background-color: #fff;
}
  </style>
</head>
<body class="<%= user.theme %>" data-user-id="<%= user._id %>">
  <div class="container-fluid">
    <div class="row min-vh-100">
      <%- include('partials/userSettings/sideBar') %>
      <main class="col-md-10 col-12 p-4">
      
        <%- include('partials/userSettings/userSecurity', { user, activePage, success, error }) %>
      </main>
    </div>
  </div>

  <div id="leftMobileSidebar" class="d-md-none p-4">
    <div class="text-center sidebar-header">
      <img src="<%= user.avatar || 'https://via.placeholder.com/90' %>" alt="Avatar" class="rounded-circle mb-2" style="width: 70px; height: 70px;">
      <h6 class="fw-bold"><%= user.firstName %></h6>
    </div>
    <ul class="nav flex-column px-2">
      <li class="nav-item mb-3">
        <a class="nav-link <%= activePage === 'profileSetting' ? 'bg-orange text-white fw-bold rounded-3 px-3 py-2 shadow-sm' : 'text-dark' %>" 
           href="/userSettings/profilePreference/<%= user._id %>">Profile Preferences</a>
      </li>
      <li class="nav-item mb-3">
        <a class="nav-link <%= activePage === 'display' ? 'bg-orange text-white fw-bold rounded-3 px-3 py-2 shadow-sm' : 'text-dark' %>" 
           href="/userSettings/display/<%= user._id %>">Display</a>
      </li>
      <li class="nav-item mb-3">
        <a class="nav-link <%= activePage === 'security' ? 'bg-orange text-white fw-bold rounded-3 px-3 py-2 shadow-sm' : 'text-dark' %>" 
           href="/userSettings/security/<%= user._id %>">Account Security</a>
      </li>
      <li class="nav-item mb-3">
        <a class="nav-link <%= activePage === 'balance' ? 'bg-orange text-white fw-bold rounded-3 px-3 py-2 shadow-sm' : 'text-dark' %>" 
           href="/userSettings/balance/<%= user._id %>">Account Balance</a>
      </li>
    </ul>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const toggleBtn = document.getElementById("leftSidebarToggle");
      const sidebar = document.getElementById("leftMobileSidebar");

      if (toggleBtn && sidebar) {
        toggleBtn.addEventListener("click", () => {
          sidebar.classList.toggle("open");
        });
      }

      // Optional scroll hide/show
      const hamburger = document.querySelector(".mobile-menu-button");
      let lastScrollTop = 0;
      window.addEventListener("scroll", function () {
        let scrollTop = window.pageYOffset || document.documentElement.scrollTop;
        if (scrollTop > lastScrollTop) {
          hamburger.style.opacity = "0";
          hamburger.style.pointerEvents = "none";
        } else {
          hamburger.style.opacity = "1";
          hamburger.style.pointerEvents = "auto";
        }
        lastScrollTop = scrollTop <= 0 ? 0 : scrollTop;
      });
    });
  </script>
  <script src="/js/setTheme.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
