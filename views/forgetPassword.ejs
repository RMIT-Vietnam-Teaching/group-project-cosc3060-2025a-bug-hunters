<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        html, body {
            height: 100%;
            background-color: #e3f6f9;
        }
        .reset-container {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .reset-form {
            max-width: 400px;
            width: 100%;
            padding: 0 15px;
        }
        .submit-btn {
            background-color: #e07a5f;
            border-color: #e07a5f;
            color: white;
            border-radius: 25px;
            padding: 10px 0;
        }
        .submit-btn:hover {
            background-color: #d8704f;
            border-color: #d8704f;
            color: white;
        }
        .form-control {
            padding: 12px;
            border-radius: 4px;
            box-shadow: 4px 5px 0px rgba(0, 0, 0, 0.15);
            border: black solid 1px;
        }
        .alert{
            display: block;
        }

    </style>
</head>
<body>
    <div class="container-fluid reset-container">
        <div class="reset-form">
            <h3 class="text-center mb-4">Reset password?</h3>

            <% if (typeof error !== "undefined") { %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
            <% } %>
            <% if (typeof success !== "undefined") { %>
                <div class="alert alert-success" role="alert">
                    <%= success %>
                </div>
            <% } %>

            <form id="resetForm" action="/auth/forgetPassword/resetPassword" method="POST">
                <div class="mb-4">
                    <label for="userEmail" class="form-label">Email <span class="text-danger">*</span></label>
                    <input type="email" class="form-control" id="userEmail" name="userEmail" placeholder="Your Email">
                    <div id="emailError" class="text-danger mt-1"></div>
                </div>
                
                <div class="mb-3">
                    <button type="submit" class="btn submit-btn w-100">Submit</button>
                </div>
            </form>
            
       
        
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const getVal = id => document.getElementById(id).value.trim();
        const setError = (id, msg) => document.getElementById("emailError").innerText = msg;
        document.getElementById("resetForm").addEventListener("submit", function(event) {
            let valid = true;
     
            // Clear all error messages before validating
            setError("userEmail", ""); // Corrected: We need to target the specific input ID
     
            // Get the email value
            const userEmail = getVal("userEmail");
     
            // Check if the email field is empty
            if (!userEmail) {
                valid = false;
                setError("userEmail", "Please enter your email address.");
            } else if (!/\S+@\S+\.\S+/.test(userEmail)) {
                // Check if the email format is valid
                valid = false;
                setError("userEmail", "Please enter a valid email address.");
            }
     
            // If not valid, prevent form submission
            if (!valid) event.preventDefault();
        });
     </script>
     
</body>
</html>
