<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>User Profile</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/userSetting.css" />
  

  <style>
    main {
  position: relative; /* ok */
  z-index: 1; /* this must NOT be higher than hamburger */
}
    /* Hamburger (only show on mobile) */
    .mobile-menu-button {
      background: none;
      border: none;
      padding: 0;
      margin-right: 10px;
      cursor: pointer;
      display: flex;
      flex-direction: column;
      justify-content: center;
      gap: 5px;
      width: 30px;
      height: 30px;
    }
    .mobile-menu-button span {
      background-color: #000 !important;
      display: block;
      width: 24px;
      height: 3px;
      border-radius: 2px;
    }
    .mobile-menu-button span {
  background-color: #000; /* Black for light mode */
}

body.dark .mobile-menu-button span {
  background-color: #fff; /* White for dark mode */
}
  
    body.dark .mobile-menu-button span {
      background-color: #fff;
      background-color: white; /* Dark mode hamburger lines */
    }
  
    @media (min-width: 768px) {
      .mobile-menu-button {
        display: none;
      }
    }
  
    /* Dropdown Sidebar */
    #sidebarDropdown {
      
      background-color: #000000;
      border-right: 1px solid #000000;
      height: 100%;
      overflow-y: auto;
      padding: 20px 0;
      transition: left 0.3s ease-in-out;
    }
  
    #sidebarDropdown .nav {
      margin-top: 20px;
    }
  
    #sidebarDropdown .nav-link {
      padding: 10px 20px;
      font-size: 1.1rem;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }
  
    #sidebarDropdown .nav-item {
      margin-bottom: 20px;
    }
  
    @media (max-width: 767px) {
      #sidebarDropdown {
        position: absolute;
        top: 56px;
        left: -260px;
        width: 250px;
        height: 100%;
        z-index: 2000;
      }
      #sidebarDropdown.open {
        left: 0;
      }
    }
  
    .bg-orange {
      background-color: #e07b4f !important;
    }
  

  
    /* Default light mode styles */
#leftMobileSidebar {
  background-color: #fdfdfd;
  color: #212529;
  width: 260px;
  transform: translateX(-100%);
  transition: transform 0.3s ease-in-out;
  padding: 24px 16px;
  z-index: 1050;
  border-right: 1px solid #e0e0e0;
}

/* Dark Mode overrides */
body.dark #leftMobileSidebar {
  background-color: #1f1f1f;
  color: #f5f5f5;
  border-right: 1px solid #333;
}
  
    #leftMobileSidebar .nav-link {
      padding: 12px 18px;
      margin-bottom: 12px;
      border-radius: 8px;
      color: #212529;
      transition: background 0.2s ease;
    }
  
    #leftMobileSidebar .text-center {
      margin-bottom: 24px;
    }
  
    #leftMobileSidebar.open {
      transform: translateX(0);
    }
  
  
    body.dark #leftMobileSidebar .nav-link {
      color: #ccc !important;
    }
  
    body.dark #leftMobileSidebar .nav-link.bg-orange {
      background-color: #f3c6a0 !important;
      color: #1f1f1f !important;
    }
  
    body.dark #leftMobileSidebar h6 {
      color: white !important;
    }
  </style>
</head>

<body class="<%= user.theme %>" data-user-id="<%= user._id %>">

  <!-- navbar -->
 

  <!-- layout -->
  <div class="container-fluid">
    <div class="row vh-100">
      
      <!-- Sidebar -->
      <%- include('partials/userSettings/sideBar') %>

      <!-- Main Content -->
      <main class="col-md-10 col-12 p-4">
        <%- include('partials/userSettings/userPreference') %>
      </main>

    </div>
  </div>

<!-- Mobile Left Sidebar -->
<div id="leftMobileSidebar" class="d-md-none position-fixed top-0 start-0 p-4 vh-100">
  <!-- Avatar + Name -->
  <div class="text-center mb-4">
    <img src="<%= user.avatar || 'https://via.placeholder.com/90' %>" alt="Avatar" 
         class="rounded-circle mb-2" style="width: 70px; height: 70px;">
    <h6 class="fw-bold"><%= user.firstName %></h6>
  </div>

  <!-- Nav Links -->
  <ul class="nav flex-column px-2">
    <li class="nav-item mb-3">
      <a class="nav-link <%= activePage === 'profileSetting' ? 'bg-orange text-white fw-bold rounded-3 px-3 py-2 shadow-sm' : 'text-dark' %>" 
         href="/userSettings/profilePreference/<%= user._id %>">Profile Preferences</a>
    </li>
    <li class="nav-item mb-3">
      <a class="nav-link <%= activePage === 'display' ? 'bg-orange text-white fw-bold rounded-3 px-3 py-2 shadow-sm' : 'text-dark' %>" 
         href="/userSettings/display/<%= user._id %>">Display</a>
    </li>
    <li class="nav-item mb-3">
      <a class="nav-link <%= activePage === 'security' ? 'bg-orange text-white fw-bold rounded-3 px-3 py-2 shadow-sm' : 'text-dark' %>" 
         href="/userSettings/security/<%= user._id %>">Account Security</a>
    </li>
    <li class="nav-item mb-3">
      <a class="nav-link <%= activePage === 'balance' ? 'bg-orange text-white fw-bold rounded-3 px-3 py-2 shadow-sm' : 'text-dark' %>" 
         href="/userSettings/balance/<%= user._id %>">Account Balance</a>
    </li>
  </ul>
</div>
  <script>
  document.addEventListener("DOMContentLoaded", function () {
  const leftToggle = document.getElementById("leftSidebarToggle");
  const leftSidebar = document.getElementById("leftMobileSidebar");

  if (leftToggle && leftSidebar) {
    leftToggle.addEventListener("click", function () {
      const isVisible = leftSidebar.style.transform === "translateX(0%)";
      leftSidebar.style.transform = isVisible ? "translateX(-100%)" : "translateX(0%)";
    });
  }
});
    document.addEventListener('DOMContentLoaded', function() {
      const menuButton = document.getElementById('sidebarToggle');
      const sidebar = document.getElementById('sidebarDropdown');

      if (menuButton && sidebar) {
        menuButton.addEventListener('click', function() {
          sidebar.classList.toggle('open');
        });
      }
    });

    document.addEventListener("DOMContentLoaded", function () {
  const toggleBtn = document.getElementById("leftSidebarToggle");
  const sidebar = document.getElementById("leftMobileSidebar");

  if (toggleBtn && sidebar) {
    toggleBtn.addEventListener("click", () => {
      sidebar.classList.toggle("open");
    });
  }
});

  </script>
  <script src="/js/setTheme.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>