<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>User Profile</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/userSetting.css" />
  <script src="/js/setTheme.js"></script>

  <style>
    /* Hamburger (only show on mobile) */
    .mobile-menu-button {
      background: none;
      border: none;
      padding: 0;
      margin-right: 10px;
      cursor: pointer;
      display: flex;
      flex-direction: column;
      justify-content: center;
      gap: 5px;
      width: 30px;
      height: 30px;
    }
    .mobile-menu-button span {
      display: block;
      width: 24px;
      height: 3px;
      background-color: white;
      border-radius: 2px;
    }
    @media (min-width: 768px) {
      .mobile-menu-button {
        display: none;
      }
    }

   
   
    #sidebarDropdown {
  background-color: #fdf8f3;
  border-right: 1px solid #eee;
  height: 100%;
  overflow-y: auto;
  padding: 20px 0;
  transition: left 0.3s ease-in-out;
}
    #sidebarDropdown .nav {
    margin-top: 20px; 
  }

  #sidebarDropdown .nav-link {
  padding: 10px 20px;
  font-size: 1.1rem;
  white-space: nowrap;  
  overflow: hidden;
  text-overflow: ellipsis;
}

  #sidebarDropdown .nav-item {
    margin-bottom: 20px;
  }

    @media (max-width: 767px) {
      #sidebarDropdown {
        position: fixed;
        top: 56px;
        left: -260px;
        width: 250px;
        height: 100%;
        z-index: 2000;
      }
      #sidebarDropdown.open {
        left: 0;
      }
    }
  </style>
</head>

<body class="<%= user.theme %>" data-user-id="<%= user._id %>">

  <!-- navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4 d-flex align-items-center">
    <div class="d-flex align-items-center gap-2">
      <button class="mobile-menu-button d-lg-none" id="sidebarToggle" aria-label="Toggle sidebar">
        <span></span>
        <span></span>
        <span></span>
      </button>
      <a class="navbar-brand" href="#">YourSite</a>
    </div>
    <div class="ms-auto">
      <span class="text-white me-3">Welcome, <%= user.firstName %></span>
    </div>
  </nav>

  <!-- layout -->
  <div class="container-fluid">
    <div class="row vh-100">
      
      <!-- Sidebar -->
      <nav id="sidebarDropdown" class="col-md-2 col-12">
        <div class="p-3">
          <div class="d-flex align-items-center mb-4 ps-2">
            <img src="<%= user.avatar || 'https://via.placeholder.com/90' %>" alt="Profile" style="width: 70px; height: 70px; border-radius: 50%; margin-right: 10px;">
            <h5 class="mb-0"><%= user.firstName %></h5>
          </div>
          <ul class="nav flex-column">
            <li class="nav-item mb-3">
              <a class="nav-link <%= activePage === 'profileSetting' ? 'active' : '' %>" href="/userSettings/profilePreference/<%= user._id %>">Profile Preferences</a>
            </li>
            <li class="nav-item mb-3">
              <a class="nav-link <%= activePage === 'display' ? 'active' : '' %>" href="/userSettings/display/<%= user._id %>">Display</a>
            </li>
            <li class="nav-item mb-3">
              <a class="nav-link <%= activePage === 'security' ? 'active' : '' %>" href="/userSettings/security/<%= user._id %>">Account Security</a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%= activePage === 'balance' ? 'active' : '' %>" href="/userSettings/balance/<%= user._id %>">Account Balance</a>
            </li>
          </ul>
        </div>
      </nav>

      <!-- Main Content -->
      <main class="col-md-10 col-12 p-4">
        <%- include('partials/userSettings/userPreference') %>
      </main>

    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const menuButton = document.getElementById('sidebarToggle');
      const sidebar = document.getElementById('sidebarDropdown');

      if (menuButton && sidebar) {
        menuButton.addEventListener('click', function() {
          sidebar.classList.toggle('open');
        });
      }
    });
  </script>

</body>
</html>