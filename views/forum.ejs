<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>Gen Z Forum</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
            rel="stylesheet"
        />
        <link
            href="https://fonts.googleapis.com/css2?family=Rubik:wght@400;600&display=swap"
            rel="stylesheet"
        />
        <link rel="stylesheet" href="/css/forum.css" />
    </head>
    <body>
        <div class="container-fluid px-5">
            <div class="row gx-4">
                <!-- Sidebar -->
                <!-- Sidebar Start -->
                <div class="col-md-3 sidebar position-sticky top-0">
                    <!-- Profile Row -->
                    <div
                        class="d-flex justify-content-center align-items-center text-center mb-3"
                    >
                        <img
                            src="<%= user.avatar %>"
                            class="avatar mb-2 me-3"
                        />
                        <h5
                            class="fw-bold mb-0 text-dark"
                            style="font-size: 1.1rem"
                        >
                            <%= user.name %>
                        </h5>
                    </div>

                    <!-- Divider -->
                    <hr class="my-3" style="border-color: #272727" />

                    <!-- Latest Courses -->
                    <div class="mb-4">
                        <h6
                            class="d-flex align-items-center gap-2 fw-bold text-dark mb-3"
                            style="font-size: 1rem"
                        >
                            <i class="bi bi-bookmark-fill text-warning"></i>
                            Latest Courses
                        </h6>
                        <% user.latestCourses.forEach(course => { %>
                        <button
                            class="btn course-btn w-100 text-start mb-2"
                            data-bs-toggle="tooltip"
                            title="Click to learn more about <%= course %>"
                        >
                            <%= course %>
                        </button>
                        <% }) %>
                    </div>

                    <!-- Divider -->
                    <hr class="my-3" style="border-color: #272727" />

                    <!-- Programs -->
                    <div>
                        <h6
                            class="d-flex align-items-center gap-2 fw-bold text-dark mb-3"
                            style="font-size: 1rem"
                        >
                            <i class="bi bi-journal-text text-primary"></i>
                            Programs
                        </h6>
                        <% user.enrolledPrograms.forEach(program => { %>
                        <button
                            class="btn course-btn w-100 text-start mb-2"
                            data-bs-toggle="tooltip"
                            title="Part of your learning path"
                        >
                            <%= program %>
                        </button>
                        <% }) %>
                    </div>
                </div>

                <!-- Main Feed -->
                <div class="col-md-6 main-feed">
                    <div
                        class="post-card d-flex align-items-center gap-3 mb-4 p-3"
                        data-bs-toggle="modal"
                        data-bs-target="#postModal"
                    >
                        <img
                            src="<%= user.avatar %>"
                            class="avatar"
                            style="width: 50px; height: 50px"
                        />
                        <input
                            type="text"
                            class="form-control post-launch"
                            placeholder="Write something..."
                            readonly
                        />
                    </div>

                    <% posts.forEach(post => { %>
                    <div class="post-card">
                        <div class="d-flex align-items-center mb-3">
                            <img
                                src="<%= post.user.avatar %>"
                                class="avatar me-2"
                            />
                            <div>
                                <strong><%= post.user.name %></strong><br />
                                <small class="text-muted"
                                    ><%= post.timeAgo %></small
                                >
                            </div>
                        </div>
                        <p><%= post.content %></p>

                        <% if (post.image) { %>
                        <img
                            src="<%= post.image %>"
                            alt="Post Image"
                            class="img-fluid rounded w-100 mb-2"
                        />
                        <% } %>

                        <div
                            class="d-flex justify-content-between align-items-center mt-3 mb-2"
                        >
                            <!-- Like count -->
                            <div class="d-flex align-items-center gap-1">
                                <i class="bi bi-heart-fill text-danger"></i>
                                <span
                                    style="
                                        font-size: 0.9rem;
                                        font-weight: 500;
                                        color: #333;
                                    "
                                >
                                    <%= post.likes %>
                                </span>
                            </div>

                            <!-- Comment count -->
                            <div class="d-flex align-items-center gap-1">
                                <i
                                    class="bi bi-chat-dots-fill text-primary"
                                ></i>
                                <span
                                    style="
                                        font-size: 0.9rem;
                                        font-weight: 500;
                                        color: #333;
                                    "
                                >
                                    <%= post.comments.length %>
                                </span>
                            </div>
                        </div>

                        <div class="reaction-btn-group">
                            <button class="reaction-btn">Like</button>
                            <button class="reaction-btn">Comment</button>
                            <button class="reaction-btn">Share</button>
                        </div>

                        <div class="position-relative w-100 mt-3">
                            <input
                                type="text"
                                class="form-control pe-5"
                                placeholder="Add a reply..."
                            />
                            <span
                                class="position-absolute top-50 end-0 translate-middle-y me-3"
                                style="cursor: pointer; font-size: 1.2rem"
                            >
                                ðŸ˜Š
                            </span>
                        </div>

                        <% post.comments.forEach(comment => { %>
                        <div class="d-flex align-items-stretch gap-2 mt-3">
                            <img
                                src="<%= comment.user.avatar %>"
                                class="rounded-circle"
                                style="
                                    width: 50px;
                                    object-fit: cover;
                                    height: 50px;
                                "
                            />
                            <div
                                class="bg-light p-3 rounded w-100 d-flex flex-column justify-content-center"
                            >
                                <strong><%= comment.user.name %></strong>
                                <div><%= comment.text %></div>
                            </div>
                        </div>
                        <% }) %>
                    </div>

                    <% }) %>
                </div>

                <!-- Right Sidebar -->
                <div class="col-md-3 rightbar">
                    <h6 class="mb-3">Recommended Instructors</h6>
                    <% instructors.forEach(instr => { %>
                    <div
                        class="d-flex align-items-center justify-content-between mb-3"
                    >
                        <div class="d-flex align-items-center gap-2">
                            <img
                                src="<%= instr.avatar %>"
                                class="avatar"
                                style="width: 40px; height: 40px"
                            />
                            <span class="fw-medium"><%= instr.name %></span>
                        </div>

                        <% if (instr.followed) { %>
                        <button
                            class="btn btn-sm fw-semibold"
                            style="
                                background-color: #ff8a65;
                                color: white;
                                border: 1px solid #ff8a65;
                                border-radius: 20px;
                                transition: all 0.2s ease-in-out;
                            "
                            onmouseover="this.style.backgroundColor='#e67350'"
                            onmouseout="this.style.backgroundColor='#ff8a65'"
                        >
                            Followed
                        </button>

                        <% } else { %>
                        <form action="/follow" method="POST">
                            <input
                                type="hidden"
                                name="instructorId"
                                value="<%= instr.id %>"
                            />
                            <button
                                class="btn btn-sm fw-semibold"
                                style="
                                    border-radius: 20px;
                                    color: #ff8a65;
                                    border: 1px solid #ff8a65;
                                    background-color: transparent;
                                "
                                onmouseover="this.style.backgroundColor='#ff8a65'; this.style.color='white';"
                                onmouseout="this.style.backgroundColor='transparent'; this.style.color='#ff8a65';"
                            >
                                Follow
                            </button>
                        </form>
                        <% } %>
                    </div>

                    <% }) %>
                </div>
            </div>
        </div>

        <!-- Post Modal -->
        <!-- Post Modal -->
        <div
            class="modal fade"
            id="postModal"
            tabindex="-1"
            aria-labelledby="postModalLabel"
            aria-hidden="true"
        >
            <div class="modal-dialog modal-xl modal-dialog-centered">
                <div
                    class="modal-content p-4 rounded-4 shadow-sm border-0"
                    style="background-color: #fff"
                >
                    <!-- Modal Header -->
                    <div class="modal-header border-0">
                        <h5
                            class="modal-title fw-semibold text-dark"
                            id="postModalLabel"
                        >
                            Create a New Post
                        </h5>
                        <button
                            type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"
                            aria-label="Close"
                        ></button>
                    </div>

                    <!-- Form -->
                    <form id="postForm" enctype="multipart/form-data">
                        <!-- Modal Body -->
                        <div class="modal-body">
                            <!-- User Avatar + Textarea -->
                            <div class="d-flex align-items-start gap-3 mb-3">
                                <img
                                    src="<%= user.avatar %>"
                                    class="avatar rounded-circle border"
                                    style="width: 56px; height: 56px"
                                />
                                <textarea
                                    id="contentInput"
                                    name="content"
                                    rows="5"
                                    class="form-control"
                                    placeholder="What would you like to share?"
                                ></textarea>
                            </div>

                            <!-- Media Preview (moved below) -->
                            <div
                                id="mediaPreview"
                                class="d-flex flex-wrap gap-2 mb-3"
                            ></div>

                            <!-- Attachment Options -->
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label
                                        for="mediaInput"
                                        class="form-control d-flex align-items-center gap-2 bg-light border-0"
                                        style="cursor: pointer"
                                    >
                                        <i
                                            class="bi bi-image text-danger fs-5"
                                        ></i>
                                        <span class="text-muted"
                                            >Add Media</span
                                        >
                                    </label>
                                    <input
                                        type="file"
                                        id="mediaInput"
                                        accept="image/*,video/*"
                                        multiple
                                        hidden
                                    />
                                </div>
                                <!-- Add Feeling (optional) -->
                                <div class="col-md-4">
                                    <button
                                        type="button"
                                        class="form-control d-flex align-items-center gap-2 bg-light border-0"
                                        style="cursor: pointer"
                                    >
                                        <i
                                            class="bi bi-emoji-smile text-warning fs-5"
                                        ></i>
                                        <span class="text-muted"
                                            >Add Feeling</span
                                        >
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Modal Footer -->
                        <div class="modal-footer border-0 pt-3">
                            <button
                                type="submit"
                                class="btn btn-primary w-100 rounded-pill fw-semibold"
                                style="background-color: #ff7043; border: none"
                            >
                                Post
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="/js/forum.js"></script>
    </body>
</html>
