<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>Gen Z Forum</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
            rel="stylesheet"
        />
        <link
            href="https://fonts.googleapis.com/css2?family=Rubik:wght@400;600&display=swap"
            rel="stylesheet"
        />
        <link rel="stylesheet" href="/css/forum.css" />
    </head>
    <body>
        <div class="container-fluid px-5">
            <div class="row gx-4">
                <!-- Left Sidebar -->
                <div class="col-md-3 sidebar">
                    <!-- Profile Section -->
                    <div
                        class="d-flex align-items-center justify-content-center gap-3 mb-4"
                    >
                        <img
                            src="<%= user.avatar %>"
                            class="avatar shadow-sm"
                        />
                        <div>
                            <h5
                                class="fw-bold mb-0 text-dark"
                                style="font-size: 1.1rem; letter-spacing: 0.3px"
                            >
                                <%= user.name %>
                            </h5>
                        </div>
                    </div>
                    

                    <!-- Latest Courses -->
                    <div class="mb-4">
                        <h6 class="course-heading">
                            <i
                                class="bi bi-bookmark-fill text-warning me-2"
                            ></i>
                            Latest Courses
                        </h6>

                        <% user.latestCourses.forEach(course => { %>
                        <button class="btn course-btn w-100 text-start mb-2">
                            <%= course %>
                        </button>
                        <% }) %>
                    </div>

                    <!-- Enrolled Programs -->
                    <div>
                        <h6
                            class="text-uppercase text-dark fw-bold mb-3"
                            style="font-size: 1rem"
                        >
                            <i class="bi bi-journal-text text-primary me-2"></i
                            >Programs
                        </h6>
                        <% user.enrolledPrograms.forEach(course => { %>
                        <button class="btn course-btn w-100 text-start mb-2">
                            <%= course %>
                        </button>
                        <% }) %>
                    </div>
                </div>

                <!-- Main Feed -->
                <div class="col-md-6 main-feed">
                    <!-- Post Composer Preview -->
                    <div
                        class="post-card d-flex align-items-center gap-3 mb-4 p-3"
                        data-bs-toggle="modal"
                        data-bs-target="#postModal"
                    >
                        <img
                            src="<%= user.avatar %>"
                            class="avatar"
                            style="width: 50px; height: 50px"
                        />
                        <input
                            data-bs-toggle="modal"
                            data-bs-target="#postModal"
                            type="text"
                            class="form-control"
                            placeholder="Write something..."
                            readonly
                        />
                    </div>
                    <!-- Post sections -->
                    <% posts.forEach(post => { %>
                    <div class="post-card">
                        <div class="d-flex align-items-center mb-3">
                            <img
                                src="<%= post.user.avatar %>"
                                class="avatar me-2"
                            />
                            <div>
                                <strong><%= post.user.name %></strong><br />
                                <small class="text-muted"
                                    ><%= post.timeAgo %></small
                                >
                            </div>
                        </div>
                        <p><%= post.content %></p>
                        <% if (post.image) { %>
                        <img
                            src="<%= post.image %>"
                            class="img-fluid rounded mb-2"
                        />
                        <% } %>
                        <div class="reaction-counts">
                            <div>
                                <i class="bi bi-heart"></i> <%= post.likes %>
                            </div>
                            <div>
                                <i class="bi bi-chat-dots"></i> <%=
                                post.comments.length %>
                            </div>
                        </div>
                        <div class="reaction-btn-group">
                            <button class="reaction-btn">üëç Like</button>
                            <button class="reaction-btn">üí¨ Comment</button>
                            <button class="reaction-btn">üîÅ Share</button>
                        </div>
                        <div class="comment-input-wrapper">
                            <input
                                type="text"
                                class="form-control"
                                placeholder="Add a reply..."
                            />
                            <button class="emoji-btn">üòä</button>
                        </div>
                        <% post.comments.forEach(comment => { %>
                        <div class="d-flex align-items-start mt-3">
                            <img
                                src="<%= comment.user.avatar %>"
                                class="avatar me-2"
                                style="width: 32px; height: 32px"
                            />
                            <div class="bg-light p-2 rounded w-100">
                                <strong><%= comment.user.name %></strong><br />
                                <%= comment.text %>
                            </div>
                        </div>
                        <% }) %>
                    </div>
                    <% }) %>
                </div>

                <!-- Right Sidebar -->
                <div class="col-md-3 rightbar">
                    <h6 class="mb-3">üöÄ Recommended Instructors</h6>
                    <% instructors.forEach(instr => { %>
                    <div
                        class="d-flex align-items-center justify-content-between mb-3"
                    >
                        <div class="d-flex align-items-center">
                            <img
                                src="<%= instr.avatar %>"
                                class="avatar me-2"
                                style="width: 40px; height: 40px"
                            />
                            <span><%= instr.name %></span>
                        </div>
                        <% if (instr.followed) { %>
                        <button class="followed-btn btn btn-sm">
                            Followed
                        </button>
                        <% } else { %>
                        <form action="/follow" method="POST">
                            <input
                                type="hidden"
                                name="instructorId"
                                value="<%= instr.id %>"
                            />
                            <button class="follow-btn btn btn-sm">
                                Follow
                            </button>
                        </form>
                        <% } %>
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>

        <!-- Modal for Creating a Post -->
        <div
            class="modal fade"
            id="postModal"
            tabindex="-1"
            aria-labelledby="postModalLabel"
            aria-hidden="true"
        >
            <div class="modal-dialog modal-xl modal-dialog-centered">
                <div class="modal-content p-4 rounded-4">
                    <div class="modal-header border-0 pb-2">
                        <h5
                            class="modal-title fw-semibold text-dark"
                            id="postModalLabel"
                        >
                            Create Post
                        </h5>
                        <button
                            type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"
                            aria-label="Close"
                        ></button>
                    </div>
                    <form
                        action="/forum/post"
                        method="POST"
                        enctype="multipart/form-data"
                    >
                        <div class="modal-body pt-1">
                            <div class="d-flex align-items-start gap-3 mb-4">
                                <img
                                    src="<%= user.avatar %>"
                                    class="avatar"
                                    style="width: 56px; height: 56px"
                                />
                                <textarea
                                    name="content"
                                    rows="6"
                                    class="form-control fs-5"
                                    placeholder="What would you like to share?"
                                    style="
                                        border-radius: 12px;
                                        border: 1.5px solid #f0f0f0;
                                        resize: none;
                                    "
                                ></textarea>
                            </div>
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label
                                        for="photoInput"
                                        class="form-control d-flex align-items-center gap-2"
                                        style="cursor: pointer"
                                    >
                                        <i
                                            class="bi bi-image text-danger fs-5"
                                        ></i>
                                        <span class="text-muted"
                                            >Add Photo</span
                                        >
                                    </label>
                                    <input
                                        type="file"
                                        name="photo"
                                        id="photoInput"
                                        accept="image/*"
                                        hidden
                                    />
                                </div>
                                <div class="col-md-4">
                                    <label
                                        for="videoInput"
                                        class="form-control d-flex align-items-center gap-2"
                                        style="cursor: pointer"
                                    >
                                        <i
                                            class="bi bi-camera-video text-primary fs-5"
                                        ></i>
                                        <span class="text-muted"
                                            >Add Video</span
                                        >
                                    </label>
                                    <input
                                        type="file"
                                        name="video"
                                        id="videoInput"
                                        accept="video/*"
                                        hidden
                                    />
                                </div>
                                <div class="col-md-4">
                                    <button
                                        type="button"
                                        class="form-control d-flex align-items-center gap-2"
                                        style="cursor: pointer"
                                    >
                                        <i
                                            class="bi bi-emoji-smile text-warning fs-5"
                                        ></i>
                                        <span class="text-muted"
                                            >Add Feeling</span
                                        >
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer border-0 pt-3">
                            <button
                                type="submit"
                                class="btn btn-primary w-100 rounded-pill fw-semibold"
                                style="background-color: #ff7043; border: none"
                            >
                                Post
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
