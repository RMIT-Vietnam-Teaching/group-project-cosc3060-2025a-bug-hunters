<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Login Page</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    html, body {
      height: 100%;
      margin: 0;
    }
    .login-container {
      height: 100vh;
      max-width: 100%;
      margin: 0;
      padding: 0;
    }
    .row {
      height: 100%;
      margin: 0;
    }
    .col-md-6 {
      padding: 0;
    }
    .login-form {
      padding: 2rem;
      max-width: 450px;
      margin: 0 auto;
      display: flex;
      flex-direction: column;
      justify-content: center;
      height: 100%;
    }
    .divider {
      display: flex;
      align-items: center;
      margin: 1.5rem 0;
    }
    .divider::before, .divider::after {
      content: "";
      flex: 1;
      height: 1px;
      background-color: #dee2e6;
    }
    .divider-text {
      padding: 0 1rem;
    }
    .login-btn {
      background-color: #e07a5f;
      border-color: #e07a5f;
    }
    .login-btn:hover {
      background-color: #d8704f;
      border-color: #d8704f;
    }
    .social-login {
      display: flex;
      justify-content: center;
      gap: 10px;
    }
    .social-btn {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      border: 1px solid #dee2e6;
      background-color: white;
      padding: 0;
    }
    .social-btn img {
      width: 20px;
      height: 20px;
    }
    .image-side {
      background-color: #e3f6f9;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .content-wrapper {
      padding-top: 4rem;
      padding-bottom: 4rem;
    }
    .form-control {
      box-shadow: 4px 5px 0px rgba(0, 0, 0, 0.15);
      border: black solid 1px;
    }
    .error-text {
      color: red;
      font-size: 0.875rem;
      margin-top: 0.25rem;
    }
  </style>
</head>
<body>
  <div class="container-fluid login-container">
    <div class="row">
      <div class="col-md-6">
        <div class="login-form">
          <div class="content-wrapper">

            <% if (typeof error !== "undefined") { %>
              <div class="alert alert-danger" role="alert">
                <%= error %>
              </div>
            <% } %>

            <h2 class="text-center mb-4">Login</h2>
            
            <form id="loginForm" action="/auth/login" method="POST" novalidate>
              <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="userEmail" name="userEmail"  placeholder="Your Email">
                <div id="userEmailError" class="error-text"></div>
              </div>
              
              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="userPassword" name="userPassword" placeholder="Your password">
                <div id="userPasswordError" class="error-text"></div>
              </div>
              
              <div class="text-end mb-3">
                <a href="/auth/forgetPassword" class="text-decoration-none">Forgot your password?</a>
              </div>
              
              <div class="mb-3 d-flex justify-content-center">
                <div class="form-check border border-dark rounded px-5 py-3">
                  <input type="checkbox" class="form-check-input" id="isBot" name="isBot">
                  <label class="form-check-label" for="isBot">I'm not a bot</label>
                </div>
              </div>
              <div id="isBotError" class="text-danger text-center mb-3"></div>
              
              <button class="btn login-btn text-white w-100 py-2" type="submit">Login</button>
            </form>
            
            <div class="divider">
              <span class="divider-text">OR</span>
            </div>
            
            <div class="social-login mb-4">
              <button class="social-btn" type="button">
                <img src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/icons/facebook.svg" alt="Facebook">
              </button>
              <button class="social-btn" type="button">
                <img src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/icons/apple.svg" alt="Apple">
              </button>
              <button class="social-btn" type="button">
                <img src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/icons/google.svg" alt="Google">
              </button>
            </div>
            
            <div class="text-center mt-3">
              <span>Don't have an account? <a href="/auth/register" class="text-decoration-none">Register here</a></span>
            </div>

          </div>
        </div>
      </div>

      <div class="col-md-6 d-none d-md-block image-side">
        <img src="/api/placeholder/500/500" alt="Child with headphones" class="img-fluid">
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.getElementById("loginForm").addEventListener("submit", function (e) {
      const userEmail = document.getElementById("userEmail").value.trim();
      const userPassword = document.getElementById("userPassword").value.trim();
      const isBot = document.getElementById("isBot").checked;

      let valid = true;

      // Reset all error messages
      document.getElementById("userEmailError").innerText = "";
      document.getElementById("userPasswordError").innerText = "";
      document.getElementById("isBotError").innerText = "";

      if (!userEmail) {
        document.getElementById("userEmailError").innerText = "Email is required.";
        valid = false;
      }

      if (!userPassword) {
        document.getElementById("userPasswordError").innerText = "Password is required.";
        valid = false;
      }

      if (!isBot) {
        document.getElementById("isBotError").innerText = "Please confirm you're not a bot.";
        valid = false;
      }

      if (!valid) e.preventDefault();
    });
  </script>
</body>
</html>
