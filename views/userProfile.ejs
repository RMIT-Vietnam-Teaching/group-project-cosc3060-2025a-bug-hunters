<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>User Profile Overview</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/userProfile.css">
</head>
<body>
  <div class="container py-5">

    <!-- Profile Info Section -->
    <div class="row align-items-center bg-light p-4 rounded shadow-sm mb-5">
      <div class="col-md-3 text-center">
        <img src="/images/defaultAvatar.png" alt="Profile Picture" class="rounded-circle" width="140" height="140">
        <h4 class="mt-3"><%= user.firstName %></h4>
      </div>
      <div class="col-md-6">
        <div class="bg-white p-4 rounded shadow-sm">
          <div class="row">
            <div class="col-sm-6">
              <p><strong>Role</strong><br><%= user.role %></p>
              <p><strong>Gmail</strong><br><a href="<%= user.email %>"><%= user.email %></a></p>
              <p><strong>Phone</strong><br>095298375</p>
            </div>
            <div class="col-sm-6">
              <p><strong>Major</strong><br>Cybersecurity</p>
              <p><strong>About me</strong><br><%= user.aboutme %></p>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-3 text-center mt-3 mt-md-0">
        <button class="btn btn-outline-dark me-2"><i class="bi bi-share me-1"></i> Share</button>
        <button class="btn btn-outline-dark"><i class="bi bi-chat-dots me-1"></i> Message</button>
      </div>
    </div>

    <!-- Courses Section -->
    <h4 class="mb-4">Course Studied So Far/ Created Course</h4>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">

      <% const courses = [
        { title: "Introduction to Cybersecurity", instructor: "Dr. Alina Prest", image: "cyber1.jpg" },
        { title: "Data Dive: Exploring Big Data", instructor: "Dr. Mark Bright", image: "cyber2.jpg" },
        { title: "AI Foundations: The Essentials", instructor: "Dr. Kim Park", image: "cyber3.jpg" },
        { title: "Graphic Design 101 - Introductory", instructor: "Mikayla Jones", image: "design1.jpg", italic: true },
        { title: "UI/UX For Beginners", instructor: "Josh Hamil", image: "design2.jpg" },
        { title: "Basic Psychology - Course 3", instructor: "Dr. Alan Teck", image: "psych1.jpg", italic: true }
      ]; %>

      <% courses.forEach(course => { %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <img src="/images/<%= course.image %>" class="card-img-top" alt="<%= course.title %>">
            <div class="card-body">
              <h6 class="card-title <%= course.italic ? 'fst-italic fw-bold' : 'fw-semibold' %>"><%= course.title %></h6>
              <p class="card-subtitle text-muted mb-2">by <%= course.instructor %></p>
              <p class="card-text">Kickstart your career in cybersecurity â€“ start with the essentials!</p>
              <a href="#" class="btn btn-outline-dark w-100">Click to see details</a>
            </div>
          </div>
        </div>
      <% }); %>

    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>