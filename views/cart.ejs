<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shopping Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

  <style>
    body {
      background-color: #fff;
    }
    .cart-item {
      box-shadow: 3px 3px 8px rgba(0, 0, 0, 0.1);
      border-radius: 12px;
      margin-bottom: 1.5rem;
    }
    .cart-img {
      width: 80px;
      height: 60px;
      background-color: #ccc;
      border-radius: 8px;
      margin-right: 16px;
    }
    .order-summary {
      border: 1px solid #222;
      padding: 20px;
      border-radius: 12px;
      background-color: #fff;
      position: sticky;
      top: 20px;
    }
    .remove-btn {
      background-color: #333;
      color: #fff;
      border: none;
      padding: 6px 16px;
      border-radius: 6px;
      font-weight: 500;
    }
    .checkout-btn, .continue-btn {
      background-color: #e26d4d;
      color: white;
      font-weight: 600;
      padding: 10px 20px;
      border-radius: 8px;
      border: none;
      width: 100%;
      margin-top: 10px;
      text-decoration: none;
      text-align: center;
      display: inline-block;
    }
    .checkout-btn:hover,
    .continue-btn:hover {
      background-color: #c95535;
    }
    .course-title {
      font-weight: bold;
      font-size: 1rem;
    }
    .course-desc {
      font-size: 0.875rem;
      color: #555;
    }
    .course-price {
      font-weight: bold;
      font-size: 0.95rem;
    }
  </style>
</head>
<body>
   <!-- navbar -->
   <%- include('partials/navbar') %>

  <div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="fw-bold m-0">Shopping Cart</h2>
      <a href="/courses" class="btn btn-outline-dark fw-semibold">‚Üê Continue Shopping</a>
    </div>  
  
    <div class="row">
      <div class="col-lg-8" id="cartContainer">
        <!-- Course Items -->
        <% cartItems.forEach(course => { %>
          <div class="p-3 bg-white cart-item d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
              <div class="cart-img"></div>
              <div>
                <div class="course-title"><%= course.title %></div>
                <div class="course-desc"><%= course.description %></div>
                <div class="course-price">$<%= course.price %></div>
              </div>
            </div>
            <form method="POST" action="/cart/remove/<%= course._id %>">
              <button type="submit" class="remove-btn">Remove</button>
            </form>
          </div>
        <% }) %>
      </div>
      
      <!-- Order Summary moved to the right column, under the Continue Shopping button -->
      <div class="col-lg-4">
        <div class="order-summary">
          <h5 class="fw-bold">Order Summary</h5>
          <hr>
          <p>Total (<%= cartItems.length %> Courses): 
             <strong>$<%= cartItems.reduce((sum, c) => sum + c.price, 0) %></strong></p>
          <a href="/payment/checkout?id=<%= user._id %>" class="checkout-btn">Checkout</a>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>