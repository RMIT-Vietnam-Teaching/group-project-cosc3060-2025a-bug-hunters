<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Account Balance</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/userProfile.css" />
  
</head>

<body data-theme="<%= user.theme %>">

  <!-- navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4">
    <a class="navbar-brand" href="#">YourSite</a>
    <div class="ms-auto">
      <span class="text-white me-3">Welcome, <%= user.firstName %></span>
    </div>
  </nav>

  <div class="container-fluid">
    <div class="row vh-100">

      <!-- sidebar -->
      <%- include('partials/sideBar') %>

      <!-- main Content -->
      <main class="col-md-10 p-4">
        <div class="d-flex justify-content-between align-items-center border-bottom pb-3 mb-4">
          <div class="text-muted fs-5">‚Üê</div>
          <h1 class="h4 m-0">Account Balance</h1>
          <div></div>
        </div>

        <!-- balance info -->
        <form action="/profile/balance/checkout" method="POST" class="row g-3">
          <div class="col-md-6">
            <label class="form-label fw-bold">Current Balance (Coin)</label>
            <input type="text" class="form-control" value="$ <%= user.balance || '1034' %>" readonly />
          </div>

          <!-- payment -->
          <div class="col-md-12 mt-4">
            <label class="form-label fw-bold">Payment methods</label>
            <div class="credit-card-box">
              <span>Credit card</span>
              <span>
                <img src="/images/mastercard.png" alt="MasterCard">
                <img src="/images/visa.png" alt="Visa">
              </span>
            </div>
          </div>

          <!-- card inputs -->
          <div class="col-md-12">
            <input type="text" class="form-control input-disabled" placeholder="Card Number" disabled>
          </div>

          <div class="col-md-6">
            <input type="text" class="form-control input-disabled" placeholder="MM/YY" disabled>
          </div>
          <div class="col-md-6">
            <input type="text" class="form-control input-disabled" placeholder="CVC" disabled>
          </div>

          <!-- continue button -->
          <div class="col-md-12 mt-3">
            <button type="submit" class="btn btn-continue">Continue</button>
          </div>
        </form>
      </main>
    </div>
  </div>
</body>
</html>