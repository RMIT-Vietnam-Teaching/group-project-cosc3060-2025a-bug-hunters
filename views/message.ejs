                <div class="chat-input-container">
                    <button class="btn btn-light me-2"><i class="fas fa-image"></i></button>
                    <button class="btn btn-light me-2"><i class="fas fa-paperclip"></i></button>
                    <button class="btn btn-light me-2"><i class="far fa-smile"></i></button>
                    <input type="text" class="form-control input-message" placeholder="Write something">
